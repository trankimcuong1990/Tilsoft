@{
    ViewBag.Title = "Loadingplanning report";
}

    <div class="jarviswidget" id="wid-id-overall-dimension" data-widget-editbutton="true" data-widget-colorbutton="true" data-widget-fullscreenbutton="true" data-widget-deletebutton="true">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>General overview</h2>
        </header>
          <div class="form-group">
                        <label>LoadingPlan REF</label>
                        <input class="form-control" type="text" name="LoadingPlanUd" ng-model="reportObjectData.loadingPlanUd">

                        <label>Container REF</label>
                        <input class="form-control" type="text" name="containerRefNo" ng-model="reportObjectData.containerRefNo">

                        <label>Factory</label>
                        <input class="form-control" type="text" name="factoryUd" ng-model="reportObjectData.factoryUd">

                        <label>Season</label>
                        <input class="form-control" type="text" name="season" ng-model="reportObjectData.season">

                        <label>Controller</label>
                        <input class="form-control" type="text" name="controller" ng-model="reportObjectData.controllerName">

                        <label>Loading date</label>
                        <input class="form-control" type="text" name="loadingDate" ng-model="reportObjectData.loadingDate">

                        <label>ShippedDate</label>
                        <input class="form-control" type="text" name="shippedDate" ng-model="reportObjectData.shippedDate">

                        <label>ShipmentDate</label>
                        <input class="form-control" type="text" name="shipmentDate" ng-model="reportObjectData.shipmentDate">

