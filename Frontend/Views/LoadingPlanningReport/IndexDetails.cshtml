                        <input class="form-control" type="text" name="etd" ng-model="reportObjectData.etd">

                        <label>ETA</label>
                        <input class="form-control" type="text" name="eta" ng-model="reportObjectData.eta">

                        <label>CutOffDate</label>
                        <input class="form-control" type="text" name="cutOffDate" ng-model="reportObjectData.cutOffDate">
                    </div>
    </div>

    <div class="jarviswidget" id="wid-id-other-dimension" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
