{
}


@section FormAction {
<ul id="sparks">
    <li class="sparks-info">
        <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
    </li>
    <li class="sparks-info">
        <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
    </li>
    <li class="sparks-info">
        <a href="#" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current))" title="Save" ng-click="event.quickUpdate($event)"><i class="fa fa-save"></i></a>
    </li>
</ul>
}

@section pagejs {
    <script src="~/Angular/app/documentMonitoring/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jQuery('.search-filter').keypress(function (e) {
            if (e.keyCode == 13) {
                var scope = angular.element(jQuery('body')).scope();
                scope.event.reload();
            }
        });

        var searchResultGrid = jQuery('#searchTableContent').scrollableTable(
            function (currentPage) {
                var scope = angular.element(jQuery('body')).scope();
                scope.$apply(function () {
                    scope.pageIndex = currentPage;
                    documentMonitoringService.searchFilter.pageIndex = currentPage;
                    scope.event.search();
                });
            },
            function (sortedBy, sortedDirection) {
                var scope = angular.element(jQuery('body')).scope();
                scope.$apply(function () {
                    scope.pageIndex = 1;
                    documentMonitoringService.searchFilter.pageIndex = 1;
                    documentMonitoringService.searchFilter.sortedBy = sortedBy;
                    documentMonitoringService.searchFilter.sortedDirection = sortedDirection;
                    scope.event.search();
                });
            });

        documentMonitoringService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/documentmonitoring/';
        documentMonitoringService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        documentMonitoringService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];

        angular.module('tilsoftApp', ['avs-directives'])
            .controller('tilsoftController', ['$scope', function ($scope) {
                // properties
                $scope.data = [];
                $scope.supportData = [];
                $scope.pageIndex = 1;
                $scope.totalPage = 0;
                $scope.filters = {
                    BLNo: '',
                    InvoiceNo: ''
                };

                // events
                $scope.event = {
                    reload: function () {
                        $scope.pageIndex = 1;
                        // clear all value documentMonitoringService
                        documentMonitoringService.searchFilter.pageIndex = 1;
                        documentMonitoringService.searchFilter.sortedBy = 'BLNo';
                        documentMonitoringService.searchFilter.sortedDirection = 'ASC';
                        // call event search
                        $scope.event.search();
                    },
                    search: function () {
                        // set value filters for service
                        documentMonitoringService.searchFilter.filters = $scope.filters;
                        // call method search of service
                        documentMonitoringService.search(
                            function (data) {
                                $scope.data = data.data;
                                $scope.totalPage = Math.ceil(data.totalRows / documentMonitoringService.searchFilter.pageSize);
                                $scope.$apply(); // clear and load data full screen

                                // display paging
                                if (data.totalRows < documentMonitoringService.searchFilter.pageSize) {
                                    jQuery('#searchTableContent').find('ul').hide();
                                } else {
                                    jQuery('#searchTableContent').find('ul').show();
                                }

                                jQuery('#content').show();

                                searchResultGrid.updateLayout();
                            },
                            function (error) {
                                $scope.data = [];
                                $scope.totalPage = 0;
                                $scope.pageIndex = 1;
                                $scope.$apply();
                            })
                    },

                    quickUpdate: function ($event) {
                        debugger;
                        $event.preventDefault();
                        documentMonitoringService.quickupdate(
                            $scope.data,
                            function (data) {
                                jsHelper.processMessage(data.message);
                                if (data.message.type == 0) {

                                }
                            },
                            function (error) {
                                jsHelper.showMessage('warning', error);
                            }
                        );
                    },

                    editStatus: function (item) {
                        item.isEdit = 1;
                    }
                }

                $scope.event.reload();
            }]);
    </script>
}
