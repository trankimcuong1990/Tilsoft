@{
    ViewBag.Title = "Search Sub Material Option";
    ViewBag.Module = "Sub Material Option";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Search Result</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div avs-scroll grid-handler="gridHandler" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1040px">
                                <div style="width: 100px"></div>
                                <div class="sorting" data-colname="IsStandard" style="width: 100px">Standard</div>
                                <div class="sorting" data-colname="IsEnabled" style="width: 100px">Enabled</div>
                                <div style="width: 100px">Image</div>
                                <div class="sorting" data-colname="DisplayIndex" style="width: 80px">Index</div>
                                <div class="sorting" data-colname="Season" style="width: 100px">Season</div>
                                <div class="sorting" data-colname="SubMaterialOptionUD" style="width: 100px">Code</div>
                                <div class="sorting" data-colname="SubMaterialOptionNM">Name</div>
                            </div>
                            <div class="tilsoft-table-filter" style="width: 1040px; top: 50px">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>
                                                <div style="width: 100px; border-right:solid 1px #ddd">
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 100px; border-right:solid 1px #ddd">
                                                    <label class="select">
                                                        <select class="search-filter" ng-model="filters.IsStandard" ng-options="standard.yesNoValue as standard.yesNoText for standard in standardValues">
                                                            <option value="">Any</option>
                                                        </select>
                                                        <i></i>
                                                    </label>
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 100px; border-right:solid 1px #ddd">
                                                    <label class="select">
                                                        <select class="search-filter" ng-model="filters.IsEnabled" ng-options="standard.yesNoValue as standard.yesNoText for standard in standardValues">
                                                            <option value="">Any</option>
                                                        </select>
                                                        <i></i>
                                                    </label>
                                                </div>
                                            </th>
                                            <th><div style="width: 100px; border-right:solid 1px #ddd"></div></th>
                                            <th><div style="width: 80px; border-right:solid 1px #ddd"></div></th>
                                            <th>
                                                <div style="width: 100px; border-right:solid 1px #ddd">
                                                    <label class="select">
                                                        <select class="search-filter" ng-model="filters.Season" ng-options="season.seasonValue as season.seasonText for season in seasons">
                                                            <option value=""></option>
                                                        </select>
                                                        <i></i>
                                                    </label>
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 100px; border-right:solid 1px #ddd">
                                                    <label class="input">
                                                        <input maxlength="4" class="search-filter" type="text" ng-model="filters.SubMaterialOptionUD" />
                                                    </label>
                                                </div>
                                            </th>
                                            <th style="width: 100%">
                                                <div style="text-align: left;">
                                                    <label class="input" style="width: 100%;">
                                                        <input style="text-align: left; width: 100%;" maxlength="255" class="search-filter" type="text" ng-model="filters.SubMaterialOptionNM" />
                                                    </label>
                                                </div>
                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1040px; margin-top: 95px">
                                <table>
                                    <tbody>
                                        <tr ng-repeat="model in data">
                                            <td style="width: 99px; text-align:center;">
                                                @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                                {
                                                    <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "SubMaterialOption")/{{model.subMaterialOptionID}}" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "SubMaterialOption")/{{model.subMaterialOptionID}}" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                                }

                                                @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                                {
                                                    <a class="btn btn-danger btn-xs font-11" href="javascript:void(0);" title="Delete" ng-click="event.delete(model.subMaterialOptionID)"><i class="fa fa-times"></i> Del</a>
                                                }
                                            </td>
                                            <td style="width: 100px; text-align: center">
                                                <i class="fa fa-check-square-o" ng-if="model.isStandard"></i>
                                            </td>
                                            <td style="width: 100px; text-align: center">
                                                <i class="fa fa-check-square-o" ng-if="model.isEnabled"></i>
                                            </td>
                                            <td style="width: 100px;">
                                                <a href="{{model.imageFile_DisplayUrl}}" data-featherlight="image">
                                                    <img style="width: 100%;" ng-src="{{model.imageFile_DisplayUrl}}" />
                                                </a>
                                            </td>
                                            <td style="width: 80px; text-align: center">{{model.displayIndex}}</td>
                                            <td style="width: 100px; text-align: center">{{model.season}}</td>
                                            <td style="width: 100px; text-align: center">{{model.subMaterialOptionUD}}</td>
                                            <td>
                                                {{model.subMaterialOptionNM}}
                                                <br/>
                                                <div>
                                                    <span class="box" ng-show="model.createdBy">
                                                        <strong>Created By: </strong>
                                                        <a ng-show="model.createdBy != null && model.CreatorName != null" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.createdBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">{{model.CreatorName}}</a>
                                                        <a ng-show="model.createdBy != null && model.CreatorName == null && model.creatorFullName != null" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.createdBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                            {{model.creatorFullName}}
                                                        </a>
                                                        on {{model.createdDate}}
                                                    </span>
                                                    <span class="box" ng-show="model.updatedBy">
                                                        <strong>Updated By: </strong>
                                                        <a ng-show="model.updatedBy != null && model.updatorName != null" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.updatedBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">{{model.updatorName}}</a>
                                                        <a ng-show="model.updatedBy != null && model.updatorName == null && model.fullName != null" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.updatedBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                            {{model.fullName}}
                                                        </a>
                                                        on {{model.updatedDate}}
                                                    </span>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <span>Found: <b>{{totalRows}}</b> record(s).</span>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Edit", "SubMaterialOption")/0" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Print"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

