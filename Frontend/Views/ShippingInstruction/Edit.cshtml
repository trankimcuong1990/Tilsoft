@{
    if (ViewBag.ID == 0)
    {
        ViewBag.Title = "Create New Shipping Instruction";
    }
    else
    {
        ViewBag.Title = "Edit Shipping Instruction";
    }
    ViewBag.Module = "Shipping Instruction";
}

<form class="row" name="editForm" id="main-form">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-product-information" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <ul class="nav nav-tabs pull-left in">
                    <li class="active">
                        <a data-toggle="tab" href="#tabGeneral"> <span> General </span> </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#tabTracking"> <i class="fa fa-history"></i> <span> Tracking </span> </a>
                    </li>
                </ul>
            </header>
            <div>
                <div class="widget-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabGeneral">
                            <div class="smart-form">
                                <fieldset style="border: none;">
                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="label">P/I</label>
                                            <label class="input">
                                                <span class="form-control">{{data.proformaInvoiceNo}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-3">
                                            <label class="label">Client</label>
                                            <label class="input">
                                                <span class="form-control">{{data.clientUD}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">Status</label>
                                            <label class="input">
                                                <span class="form-control" ng-if="!data.isConfirmed">PENDING</span>
                                                <span class="form-control" ng-if="data.isConfirmed">CONFIRMED</span>
                                            </label>
                                        </section>
                                        <section class="col col-2">
                                            <label class="label">&nbsp;</label>
                                            <a href="javascript:void(0)" class="btn btn-primary" style="padding: 5px 10px;" ng-click="event.getDefault()">Get Default Instruction</a>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-2">
                                            <label class="label">Client P/O</label>
                                            <label class="input">
                                                <span class="form-control">{{data.clientPONo}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-2">
                                            <label class="label">Documentary Credit No</label>
                                            <label class="input">
                                                <input type="text" class="form-control" ng-model="data.documentaryCreditNo">
                                            </label>
                                        </section>
                                        <section class="col col-2">
                                            <label class="label">Contact Number</label>
                                            <label class="input">
                                                <input type="text" class="form-control" ng-model="data.contactNo">
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">Priority</label>
                                            <label class="select">
                                                <select ng-model="data.priority">
                                                    <option value=""></option>
                                                    <option value="H">HIGH</option>
                                                    <option value="M">MEDIUM</option>
                                                    <option value="L">LOW</option>
                                                </select>
                                                <i></i>
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">Submission NL</label>
                                            <label class="input">
                                                <span class="form-control">{{data.submissionNL}}</span>
                                                <i></i>
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">&nbsp;</label>
                                            <label class="checkbox">
                                                <input type="checkbox" ng-model="data.islc">
                                                <i></i>LC
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">&nbsp;</label>
                                            <label class="checkbox">
                                                <input type="checkbox" ng-model="data.isDefault">
                                                <i></i>Default
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">&nbsp;</label>
                                            <label class="checkbox">
                                                <input type="checkbox" ng-model="data.isTelex">
                                                <i></i>Telex
                                            </label>
                                        </section>
                                        <section class="col col-1">
                                            <label class="label">&nbsp;</label>
                                            <label class="checkbox">
                                                <input type="checkbox" ng-model="data.isSample">
                                                <i></i>Sparepart/ Sample
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <div class="col col-6">
                                            <div class="row">
                                                <section class="col col-6">
                                                    <label class="label">POD</label>
                                                    <label class="select">
                                                        <select id="podBox" ng-model="data.podid" ng-options="poD.podid as poD.podName for poD in poDs | orderBy : 'podName'" ng-change="event.getCountryFromPOD(data.podid)">
                                                            <option value=""></option>
                                                        </select>
                                                    </label>
                                                </section>
                                                <section class="col col-6">
                                                    <label class="label">Country</label>
                                                    <label class="input">
                                                        <span class="form-control">{{data.clientCountryNM}}</span>
                                                        <i></i>
                                                    </label>
                                                    @*<label class="input">
                                                        <select id="countryBox" ng-model="data.countryID" ng-options="country.clientCountryID as country.clientCountryNM for country in countries | orderBy : 'clientCountryNM'">
                                                            <option value=""></option>
                                                        </select>
                                                    </label>*@
                                                </section>   
                                            </div>                                           
                                            <section>
                                                <label class="label">POD Remark</label>
                                                <label class="textarea textarea-resizable">
                                                    <textarea class="custom-scroll" rows="5" ng-model="data.podRemark"></textarea>
                                                </label>
                                            </section>                                            
                                            <section>
                                                <label class="label">Forwarder</label>
                                                <select id="forwarderBox" ng-model="data.forwarderID" ng-change="event.onForwarderChange()" ng-options="forwarder.forwarderID as forwarder.forwarderNM for forwarder in forwarders | orderBy : 'forwarderNM'">
                                                    <option value=""></option>
                                                </select>
                                            </section>
                                            <section>
                                                <label class="label">Forwarder Info</label>
                                                <label class="textarea textarea-resizable">
                                                    <textarea class="custom-scroll" rows="5" ng-model="data.forwarderInfo"></textarea>
                                                </label>
                                            </section>
                                        </div>
                                        <div class="col col-6">
                                            <section>
                                                <label class="label">Notify Type</label>
                                                <label class="select">
                                                    <select id="notifyTypeBox" ng-model="data.notifyTypeID" ng-change="event.onNotifyTypeChange()" ng-options="notifyType.notifyTypeID as notifyType.notifyTypeNM for notifyType in notifyTypes">
                                                        <option value=""></option>
                                                    </select>
                                                </label>
                                            </section>
                                            <section>
                                                <label class="label">Notify Info</label>
                                                <label class="textarea textarea-resizable">
                                                    <textarea class="custom-scroll" rows="5" ng-model="data.notifyInfo"></textarea>
                                                </label>
                                            </section>
                                            <section>
                                                <label class="label">Consignee Type</label>
                                                <label class="select">
                                                    <select id="consigneeTypeBox" ng-model="data.consigneeTypeID" ng-change="event.onConsigneeTypeChange()" ng-options="consigneeType.consigneeTypeID as consigneeType.consigneeTypeNM for consigneeType in consigneeTypes">
                                                        <option value=""></option>
                                                    </select>
                                                </label>
                                            </section>
                                            <section>
                                                <label class="label">Consignee Info</label>
                                                <label class="textarea textarea-resizable">
                                                    <textarea class="custom-scroll" rows="5" ng-model="data.consigneeInfo"></textarea>
                                                </label>
                                            </section>
                                        </div>
                                    </div>
                                    <section>
                                        <label class="label">Remark</label>
                                        <label class="textarea textarea-resizable">
                                            <textarea class="custom-scroll" rows="5" ng-model="data.remark"></textarea>
                                        </label>
                                    </section>
                                </fieldset>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabTracking">
                            <div class="smart-form">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="label">Updated By</label>
                                            <label class="input">
                                                <span class="form-control">{{data.updatorName}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-3">
                                            <label class="label">Updated Date</label>
                                            <label class="input">
                                                <span class="form-control">{{data.updatedDate}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-3">
                                            <label class="label">Confirmed By</label>
                                            <label class="input">
                                                <span class="form-control">{{data.confirmerName}}</span>
                                            </label>
                                        </section>
                                        <section class="col col-3">
                                            <label class="label">Confirmed Date</label>
                                            <label class="input">
                                                <span class="form-control">{{data.confirmedDate}}</span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</form>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="@Url.Action("Index", "ShippingInstruction")" class="btn btn-default" title="Go Back"><i class="fa fa-arrow-left"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current))" title="Save" ng-disabled="data.isConfirmed" ng-click="event.update($event)"><i class="fa fa-save"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default disabled" title="Delete" style="color: #ff0000;" ng-click="event.delete($event)" ng-disabled="data.isConfirmed"><i class="fa fa-times"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default" title="Print" disabled><i class="fa fa-print"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Approve, HttpContext.Current))" title="Approve" ng-click="event.approve($event)" ng-disabled="data.isConfirmed || @ViewBag.ID == 0"><i class="fa fa-thumbs-o-up"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Reset, HttpContext.Current))" title="Reset Approval status" ng-click="event.reset($event)" ng-disabled="!data.isConfirmed || @ViewBag.ID == 0"><i class="fa fa-thumbs-o-down"></i></a>
        </li>
    </ul>
}
@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/shippinginstruction/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';

        var context = {
            id: @ViewBag.ID,
            backUrl: '@Url.Action("Index", "ShippingInstruction")',
            refreshUrl: '@Url.Action("Edit", "ShippingInstruction", new { id = UrlParameter.Optional })/',
            errMsg: '@Frontend.Properties.Resources.INPUT_VALIDATION_FAILED'
        }
    </script>
    <script src="~/Angular/app/shippingInstruction/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/shippingInstruction/edit.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}