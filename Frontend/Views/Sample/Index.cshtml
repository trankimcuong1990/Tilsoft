@{
    ViewBag.Title = "Search Sample Order";
    ViewBag.Module = "Sample Order";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Filters</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div class="smart-form">
                        <fieldset>
                            <div class="row">
                                <section class="col col-2">
                                    <label class="label">Code</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.SampleUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Season</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.Season" ng-options="season.seasonValue as season.seasonText for season in seasons">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Client</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ClientUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Purpose</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.PurposeID" ng-options="purpose.purposeID as purpose.purposeNM for purpose in samplePurposes">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Transport Type</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.TransportTypeID" ng-options="transport.transportTypeID as transport.transportTypeNM for transport in sampleTransportTypes">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Status</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.SampleOrderStatusID" ng-options="status.sampleOrderStatusID as status.sampleOrderStatusNM for status in sampleOrderStatuses">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div id="searchResult" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1800px;">
                                <div style="width: 80px;"></div>
                                <div style="width: 100px;">Status</div>
                                <div style="width: 80px;" class="sorting" data-colname="Season">Season</div>
                                <div style="width: 80px" class="sorting" data-colname="SampleUD">Code</div>
                                <div style="width: 80px" class="sorting" data-colname="ClientUD">Client</div>
                                <div style="width: 80px;" class="sorting" data-colname="PurposeNM">Purpose</div>
                                <div style="width: 80px;" class="sorting" data-colname="TransportTypeNM">Tranport Type</div>
                                <div style="width: 80px;" class="sorting_desc" data-colname="Deadline">Deadline</div>
                                <div style="width: 80px;" data-colname="HardDeadline">Hard Deadline</div>
                                <div style="width: 120px;" data-colname="Destination">Destination</div>
                                <div style="width: 120px;" class="sorting" data-colname="UpdatorName">Updated By</div>
                                <div class="sorting" data-colname="UpdatedDate">Updated Date</div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1800px;">
                                <table>
                                    <tr ng-repeat="model in data">
                                        <td style="text-align: center; width: 80px;">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a class="btn btn-primary btn-xs font-11" target="_blank" href="@Url.Action("Edit", "Sample")/{{model.sampleOrderID}}" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary btn-xs font-11" target="_blank" href="@Url.Action("Edit", "Sample")/{{model.sampleOrderID}}" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                            }
                                        </td>
                                        <td style="width: 100px; text-align: center;">{{model.sampleOrderStatusNM}}</td>
                                        <td style="width: 80px; text-align: center;">{{model.season}}</td>
                                        <td style="width: 80px; text-align: center;">{{model.sampleOrderUD}}</td>
                                        <td style="width: 80px;">{{model.clientUD}}</td>
                                        <td style="width: 80px;text-align: center;">{{model.purposeNM}}</td>
                                        <td style="width: 80px;text-align: center;">{{model.transportTypeNM}}</td>
                                        <td style="width: 80px;text-align: center;">{{model.deadline}}</td>
                                        <td style="width: 80px;text-align: center;">{{model.hardDeadline}}</td>
                                        <td style="width: 120px;text-align: center;">{{model.destination}}</td>
                                        <td style="width: 120px;text-align: center;">{{model.updatorName}}</td>
                                        <td style="text-align: center;">{{model.updatedDate}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Edit", "Sample")/0" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Print"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/sample/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        jsonService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
    </script>
    <script src="~/Angular/app/sample/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/sample/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
