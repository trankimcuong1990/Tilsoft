                                                    <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "FactoryOrder")/{{item.factoryOrderID}}/@ViewBag.SaleOrderID" title="View (Read Only)" target="_blank"><i class="fa fa-folder-open"></i>View</a>
                                                }
