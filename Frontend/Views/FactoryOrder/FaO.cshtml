                                                                <td style="width: 500px; ">{{item_detail.description}}</td>
                                                                <td style="width: 90px; text-align: right">{{item_detail.saleOrderQnt | number}}</td>
                                                                <td style="width: 90px; text-align: right; ">{{item_detail.orderQnt | number}}</td>
