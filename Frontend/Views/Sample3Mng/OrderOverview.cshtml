@{
    ViewBag.Title = "Sample Order Overview";
    ViewBag.Module = "Sample Order Overview";
    ViewBag.Icon = "fa-eye";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="w01" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <h2>Sample Order Overview</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div class="smart-form">
                        <fieldset>
                            <div class="row">
                                <section class="col col-2">
                                    <label class="label">Code</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.sampleOrderUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Season</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.season" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Client</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.clientUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Deadline</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.deadline" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Hard Deadline</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.hardDeadline" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Order Status</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.sampleOrderStatusNM" />
                                    </label>
                                </section>
                            </div>

                            <div class="row">
                                <section class="col col-2">
                                    <label class="label">Purpose</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.purposeNM" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Transport Type</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.transportTypeNM" />
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="label">Destination</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.destination" />
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="label">Remark</label>
                                    <label class="input">
                                        <input type="text" readonly ng-model="data.remark" />
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-6">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th colspan="2">NL Monitor</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in data.monitorDTOs | filter: {sampleMonitorGroupID: 2}">
                                                <td style="width: 100%;">
                                                    <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{item.userID}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                        {{item.fullName}}
                                                    </a>
                                                    ({{item.internalCompanyNM}}) &nbsp;
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </section>
                                <section class="col col-6">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th colspan="2">VN Monitor</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in data.monitorDTOs | filter: {sampleMonitorGroupID: 1}">
                                                <td style="width: 100%;">
                                                    <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{item.userID}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                        {{item.fullName}}
                                                    </a>
                                                    ({{item.internalCompanyNM}}) &nbsp;
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </section>
                            </div>

                            <section>
                                <div class="note">
                                    Created by
                                    <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.createdBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                        {{data.creatorName}}
                                    </a>
                                    on {{data.createdDate}}
                                </div>

                                <div class="note">
                                    Updated by 
                                    <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.updatedBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                        {{data.updatorName}}
                                    </a> 
                                    on {{data.updatedDate}}
                                </div>
                            </section>

                        </fieldset>
                        <footer>
                            <a target="_blank" href="@Url.Action("OrderEdit", "Sample3Mng")/{{data.sampleOrderID}}" class="btn btn-success" style="float: left;"><i class="fa fa-pencil"></i> Edit</a>
                        </footer>
                    </div>
                </div>
            </div>
        </div>

        <div class="jarviswidget" id="w02" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <h2>Sample Product</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div class="smart-form">
                        <fieldset style="padding-top: 0px;">
                            <div class="row" style="border-bottom: solid 1px #ccc; padding-top: 10px;" ng-repeat="product in data.productDTOs">
                                <section class="col col-4">
                                    <div style="padding: 10px; text-align: center;">
                                        <a href="{{product.fileLocation}}" data-featherlight="image">
                                            <img ng-src="{{product.thumbnailLocation}}" style="width: 100%;" />
                                        </a>
                                    </div>
                                </section>
                                <section class="col col-8">
                                    <h3>{{product.sampleProductUD}} <code>&nbsp;{{product.sampleProductStatusNM}}&nbsp;</code></h3>
                                    <p>{{product.articleDescription}}</p>
                                    <br/>
                                    <table class="info">
                                        <tbody>
                                            <tr>
                                                <td>Quantity</td>
                                                <td>{{product.quantity}}</td>
                                                <td>Factory</td>
                                                <td>{{product.vnSuggestedFactoryUD}}</td>
                                                <td style="width: 150px; background: #f9f9f9;">Finish Image</td>
                                            </tr>
                                            <tr>
                                                <td>TD Needed</td>
                                                <td><i class="fa fa-check-square-o ng-scope" ng-if="item.istdNeeded"></i></td>
                                                <td>Sub Factory</td>
                                                <td>
                                                    <ul ng-if="product.subFactoryDTOs.length">
                                                        <li ng-repeat="item in product.subFactoryDTOs">{{item.factoryUD}}</li>
                                                    </ul>
                                                </td>
                                                <td rowspan="4">
                                                    <a href="{{product.finishedImageFileLocation}}" data-featherlight="image">
                                                        <img ng-src="{{product.finishedImageThumbnailLocation}}" style="width: 100%;" />
                                                    </a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Deadline</td>
                                                <td>{{product.factoryDeadline}}</td>
                                                <td>Indicated Price</td>
                                                <td>{{product.indicatedPrice | currency:'$':2}}</td>
                                            </tr>
                                            <tr>
                                                <td>Latest Remark</td>
                                                <td colspan="3">
                                                    <div ng-if="product.qaRemarkUpdatedBy">
                                                        Updated by
                                                        <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.updatedBy}}" data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                            {{data.updatorName}}
                                                        </a>
                                                        on {{data.updatedDate}}
                                                    </div>
                                                </td>                                               
                                            </tr>
                                            <tr>
                                                <td>Location</td>
                                                <td colspan="3" style="padding: 0px; background: #fff; vertical-align: top;">
                                                    <table class="table table-bordered table-center" style="border: none; margin-bottom: 0px;">
                                                        <thead>
                                                            <tr>
                                                                <th style="border-left: none;">Item</th>
                                                                <th>Location</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr ng-repeat="item in product.productLocationDTOs">
                                                                <td style="border-top: none; border-left: none; background: #fff;">
                                                                    {{item.sampleProductItemUD}}
                                                                </td>
                                                                <td style="border-top: none; background: #fff;">
                                                                    {{item.currentLocation}}
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0px; background: #fff;" colspan="5">
                                                    <table class="table table-bordered table-center" style="border: none; margin-bottom: 0px;">
                                                        <tbody>
                                                            <tr>
                                                                <td style="border-top: none; border-left: none; border-bottom: none; background: #fff; font-weight: bold; text-align: center;">
                                                                    <a href="javascript:void(0)" class="btn btn-success btn-xs">Product Info</a>
                                                                </td>
                                                                <td style="border-top: none; border-bottom: none; background: #fff; font-weight: bold; text-align: center;">
                                                                    <a href="javascript:void(0)" class="btn btn-success btn-xs">Factory Assignment</a>
                                                                </td>
                                                                <td style="border-top: none; border-bottom: none; width: 30%; background: #fff; font-weight: bold; text-align: center;">
                                                                    <a href="javascript:void(0)" class="btn btn-success btn-xs">Progress</a>
                                                                    <code style="padding: 2px 4px; font-size: 100%;">PENDING</code>
                                                                </td>
                                                                <td style="border-top: none; border-bottom: none; width: 30%; background: #fff; font-weight: bold; text-align: center;">
                                                                    <a href="javascript:void(0)" class="btn btn-success btn-xs">Item Data</a>
                                                                    <code style="padding: 2px 4px; font-size: 100%;">PENDING</code>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br />
                                    <a target="_blank" href="@Url.Action("ProductOverview", "Sample3Mng", new { id = UrlParameter.Optional })/{{product.sampleProductID}}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-eye"></i> Overview</a>
                                    <a target="_blank" href="@Url.Action("QARemarkList", "Sample3Mng", new { id = UrlParameter.Optional })/{{product.sampleProductID}}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-comments-o"></i> QA Remark</a>
                                    <a target="_blank" href="@Url.Action("InternalRemarkList", "Sample3Mng", new { id = UrlParameter.Optional })/{{product.sampleProductID}}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-comments-o"></i> Internal Remark</a>
                                    <a target="_blank" href="@Url.Action("TechnicalDrawingList", "Sample3Mng", new { id = UrlParameter.Optional })/{{product.sampleProductID}}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-cubes"></i> Tech.Drawing</a>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <!-- WIDGET END -->
</div>

@section FormAction {
<ul id="sparks">
    <li class="sparks-info">
        <a href="@Url.Action("Index", "Sample3Mng")" class="btn btn-default" title="Go Back"><i class="fa fa-arrow-left"></i></a>
    </li>
</ul>
}

@section pagejs {
    <script type="text/javascript">
        var context = {
            id: @ViewBag.ID,
            serviceUrl: '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/sample3/',
            token: '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]'
        };
    </script>
    <script src="~/Angular/app/sample3Mng/orderOverview.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/jsonService2.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/sample3Mng/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}