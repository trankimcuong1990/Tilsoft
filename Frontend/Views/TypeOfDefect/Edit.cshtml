@{
    var guid = Guid.NewGuid().ToString().Replace("-", "");
    var serviceRoot = System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"];
    var token = Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION];

    ViewBag.Title = (ViewBag.ID == 0) ? "Create Type Of Defect" : "Edit Type Of Defect";
    ViewBag.SubTitle = (ViewBag.ID == 0) ? "Create" : "Edit";
    ViewBag.Module = "Type Of Defect";
}

<form name="editForm" class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon">
                    <i class="fa fa-database"></i>
                </span>
                <h2>@ViewBag.SubTitle General</h2>
            </header>
            <div>
                <div class="jarviswidget-editbox"></div>
                <div class="widget-body">
                    <div class="smart-form">
                        <div class="row">

                            <section class="col col-lg-4">
                                <label class="label">
                                    <strong>Type Of Defect Code</strong>
                                    <em class="note note-error" ng-show="editForm.typeOfDefectUD.$error.required"> (Required)</em>
                                </label>
                                <label class="input" ng-class="{'state-error': editForm.typeOfDefectUD.$error.required}">
                                    <input type="text" class="form-control" name="typeOfDefectUD" ng-model="data.typeOfDefectUD" required>
                                </label>
                            </section>

                            <section class="col col-lg-4">
                                <label class="label">
                                    <strong>Type Of Defect Name</strong>
                                    <em class="note note-error" ng-show="editForm.typeOfDefectNM.$error.required"> (Required)</em>
                                </label>
                                <label class="input" ng-class="{'state-error': editForm.typeOfDefectNM.$error.required}">
                                    <input type="text" class="form-control" name="typeOfDefectNM" ng-model="data.typeOfDefectNM" required>
                                </label>
                            </section>

                            <section class="col col-lg-4">
                                <label class="label">
                                    <strong>Remark</strong>
                                    <em class="note note-error" ng-show="editForm.remark.$error.required"> (Required)</em>
                                </label>
                                <label class="input" ng-class="{'state-error': editForm.remark.$error.required}">
                                    <input type="text" class="form-control" name="remark" ng-model="data.remark">
                                </label>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</form>

@section FormAction{
    <ul id="sparks">
        <li class="sparks-info">
            <a href="@Url.Action("Index", "TypeOfDefect")" class="btn btn-default" title="Back">
                <i class="fa fa-arrow-left"></i>
            </a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default" title="Delete" ng-class="{'disabled': data.typeOfDefectID == 0}" ng-click="event.deletedata(data.typeOfDefectID)">
                <i class="fa fa-times"></i>
            </a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0)" class="btn btn-default" title="Save" ng-click="event.updatedata($event)">
                <i class="fa fa-floppy-o"></i>
            </a>
        </li>
    </ul>
}

@section pagejs{
    <script type="text/javascript">
        var context = {
            id: @ViewBag.ID,
            backUrl: '@Url.Action("Index", "TypeOfDefect")',
            refreshUrl: '@Url.Action("Edit", "TypeOfDefect", new { id = UrlParameter.Optional })/',
            serviceUrl: '@(serviceRoot)/api/typeofdefect/',
            token: '@token',
            msgValid: '@Frontend.Properties.Resources.INPUT_VALIDATION_FAILED'
        };
    </script>
    <script type="text/javascript" src="~/Views/TypeOfDefect/edit.js?v=@guid"></script>
    <script type="text/javascript" src="~/Angular/app/jsonService2.js?v=@guid"></script>
    <script type="text/javascript" src="~/Views/TypeOfDefect/service.js?v=@guid"></script>
}

