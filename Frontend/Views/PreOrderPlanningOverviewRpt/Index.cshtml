@using Frontend.Helper;
@{
    ViewBag.Title = "Pre-Order Planning Overview";
    ViewBag.Icon = "fa-bar-chart-o";
}

<style>
    .tilsoft-table-header, .tilsoft-table-totalrow, .tilsoft-table-body {
        width: {{1090 + 250*data.weekInfoDTOs.length}}px;
    }
    .tilsoft-table-header > div {
        height: 90px !important;
        text-align: center !important;
        background-color: #eee;
    }

    .tilsoft-table-totalrow {
        margin-top: 90px;
    }
    .tilsoft-table-totalrow > div {

    }
    .tilsoft-table-body {
        margin-top: 120px !important;
    }

        .tilsoft-table-header > div:nth-child(1),
        .tilsoft-table-totalrow > div:nth-child(1),
        .tilsoft-table-body table > tbody > tr > td:nth-child(1) {
            width: 80px;
            text-align: center;
        }
        .tilsoft-table-header > div:nth-child(2),
        .tilsoft-table-totalrow > div:nth-child(2),
        .tilsoft-table-body table > tbody > tr > td:nth-child(2) {
            width: 100px;
            text-align: center;
        }
        .tilsoft-table-header > div:nth-child(3),
        .tilsoft-table-totalrow > div:nth-child(3),
        .tilsoft-table-body table > tbody > tr > td:nth-child(3) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(4),
        .tilsoft-table-totalrow > div:nth-child(4),
        .tilsoft-table-body table > tbody > tr > td:nth-child(4) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(5),
        .tilsoft-table-totalrow > div:nth-child(5),
        .tilsoft-table-body table > tbody > tr > td:nth-child(5) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(6),
        .tilsoft-table-totalrow > div:nth-child(6),
        .tilsoft-table-body table > tbody > tr > td:nth-child(6) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(7),
        .tilsoft-table-totalrow > div:nth-child(7),
        .tilsoft-table-body table > tbody > tr > td:nth-child(7) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(8),
        .tilsoft-table-totalrow > div:nth-child(8),
        .tilsoft-table-body table > tbody > tr > td:nth-child(8) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(9),
        .tilsoft-table-totalrow > div:nth-child(9),
        .tilsoft-table-body table > tbody > tr > td:nth-child(9) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(10),
        .tilsoft-table-totalrow > div:nth-child(10),
        .tilsoft-table-body table > tbody > tr > td:nth-child(10) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(11),
        .tilsoft-table-totalrow > div:nth-child(11),
        .tilsoft-table-body table > tbody > tr > td:nth-child(11) {
            width: 90px;
            text-align: right;
        }
        .tilsoft-table-header > div:nth-child(12),
        .tilsoft-table-totalrow > div:nth-child(12),
        .tilsoft-table-body table > tbody > tr > td:nth-child(12) {
            width: 90px;
            text-align: right;
        }

</style>

<div class="row">
    <article class="col-sm-12">
        <div class="jarviswidget" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-bar-chart-o txt-color-darken"></i> </span>
                <h2>Pre-Order Planning Overview</h2>
            </header>
            <div class="no-padding">
                <div class="widget-body" style="padding-bottom: 0px;">
                    <div class="smart-form">
                        <fieldset>
                            <section>
                                <table>
                                    <tr>
                                        <td style="width: 150px;">Total Pre-Orders</td>
                                        <td style="text-align: right;">{{data.totalPreOrder | number:2}}</td>
                                    </tr>
                                    <tr>
                                        <td style="width: 150px;">- Allowcated</td>
                                        <td style="text-align: right;">{{data.sumDataRow.preOrderB + data.sumDataRow.preOrderA | number:2}}</td>
                                    </tr>
                                    <tr>
                                        <td style="width: 150px;">- Un-Allocated</td>
                                        <td style="text-align: right;">{{data.totalPreOrder - (data.sumDataRow.preOrderB + data.sumDataRow.preOrderA) | number:2}}</td>
                                    </tr>
                                </table>
                            </section>
                        </fieldset>
                    </div>
                    <div avs-scrollable-table class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header">
                                <div>Code</div>
                                <div>Short Name</div>

                                <div class="no-padding" style="width: 180px;">
                                    <div class="no-padding" style="width: 100%; height: 45px; border-right: none; line-height: 45px;">Capacity (1)</div>
                                    <div class="no-padding" style="width: 100%; height: 45px;">
                                        <div class="no-padding" style="width: 90px; text-align: center; height: 45px; line-height: 45px;">Before</div>
                                        <div class="no-padding" style="text-align: center; height: 45px; line-height: 45px;">After</div>
                                    </div>
                                </div>

                                <div class="no-padding" style="width: 180px;">
                                    <div class="no-padding" style="width: 100%; height: 45px; border-right: none; line-height: 45px;">Order (2)</div>
                                    <div class="no-padding" style="width: 100%; height: 45px;">
                                        <div class="no-padding" style="width: 90px; text-align: center; height: 45px; line-height: 45px;">Before</div>
                                        <div class="no-padding" style="text-align: center; height: 45px; line-height: 45px;">After</div>
                                    </div>
                                </div>

                                <div class="no-padding" style="width: 180px;">
                                    <div class="no-padding" style="width: 100%; height: 45px; border-right: none; line-height: 45px;">Pre Order (3)</div>
                                    <div class="no-padding" style="width: 100%; height: 45px;">
                                        <div class="no-padding" style="width: 90px; text-align: center; height: 45px; line-height: 45px;">Before</div>
                                        <div class="no-padding" style="text-align: center; height: 45px; line-height: 45px;">After</div>
                                    </div>
                                </div>

                                <div class="no-padding" style="width: 180px;">
                                    <div class="no-padding" style="width: 100%; height: 45px; border-right: none; line-height: 45px;">Pre Produced (4)</div>
                                    <div class="no-padding" style="width: 100%; height: 45px;">
                                        <div class="no-padding" style="width: 90px; text-align: center; height: 45px; line-height: 45px;">Before</div>
                                        <div class="no-padding" style="text-align: center; height: 45px; line-height: 45px;">After</div>
                                    </div>
                                </div>

                                <div class="no-padding" style="width: 180px;">
                                    <div class="no-padding" style="width: 100%; height: 45px; border-right: none; line-height: 45px;">Delta (5)</div>
                                    <div class="no-padding" style="width: 100%; height: 45px;">
                                        <div class="no-padding" style="width: 90px; text-align: center; height: 45px; line-height: 45px;">Before</div>
                                        <div class="no-padding" style="text-align: center; height: 45px; line-height: 45px;">After</div>
                                    </div>
                                </div>

                                <div class="no-padding" style="width: 250px; {{(wItem.weekInfoID == $parent.data.tetWeekInfoID) ? 'background: #ffcc00;' : ''}}" ng-repeat="wItem in data.weekInfoDTOs">
                                    <div class="no-padding" style="width: 100%; height: 30px; border-right: none; line-height: 30px;">{{wItem.weekIndex}}</div>
                                    <div class="no-padding" style="width: 100%; height: 30px; border-right: none; line-height: 30px;">{{wItem.weekStart}} - {{wItem.weekEnd}}</div>

                                    <div class="no-padding" style="width: 100%; height: 30px;">
                                        <div class="no-padding" style="width: 50px; text-align: center; height: 30px; line-height: 30px;">1</div>
                                        <div class="no-padding" style="width: 50px; text-align: center; height: 30px; line-height: 30px;">2</div>
                                        <div class="no-padding" style="width: 50px; text-align: center; height: 30px; line-height: 30px;">3</div>
                                        <div class="no-padding" style="width: 50px; text-align: center; height: 30px; line-height: 30px;">4</div>
                                        <div class="no-padding" style="text-align: center; height: 30px; line-height: 30px;">5</div>
                                    </div>
                                </div>

                                <div>&nbsp;</div>
                            </div>
                            <div class="tilsoft-table-totalrow">
                                <div></div>
                                <div></div>

                                <div style="width: 90px;">{{data.sumDataRow.capacityB | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.capacityA | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.orderB | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.orderA | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.preOrderB | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.preOrderA | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.preProducedB | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.preProducedA | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.deltaB | number:2}}</div>
                                <div style="width: 90px;">{{data.sumDataRow.deltaA | number:2}}</div>

                                <div style="width: 50px; text-align: right; color: {{item.color}}; {{(item.weekInfoID == $parent.data.tetWeekInfoID) ? 'background: #ffcc00;' : ''}}" ng-repeat="item in data.sumDataRow.reportWeekDetailDTOs">{{item.value | number:2}}</div>


                                <div>&nbsp;</div>
                            </div>
                            <div class="tilsoft-table-body">
                                <table>
                                    <tr ng-repeat="item in data.reportDetailDTOs">
                                        <td>{{item.factoryUD}}</td>
                                        <td>{{item.factoryNM}}</td>
                                        <td>{{item.capacityB | number:2}}</td>
                                        <td>{{item.capacityA | number:2}}</td>
                                        <td>{{item.orderB | number:2}}</td>
                                        <td>{{item.orderA | number:2}}</td>
                                        <td>{{item.preOrderB | number:2}}</td>
                                        <td>{{item.preOrderA | number:2}}</td>
                                        <td>{{item.preProducedB | number:2}}</td>
                                        <td>{{item.preProducedA | number:2}}</td>
                                        <td>{{item.deltaB | number:2}}</td>
                                        <td>{{item.deltaA | number:2}}</td>

                                        <td style="width: 50px; text-align: right; color: {{sItem.color}}; {{(sItem.weekInfoID == $parent.data.tetWeekInfoID) ? 'background: #ffcc00;' : ''}}" ng-repeat="sItem in item.reportWeekDetailDTOs">{{sItem.value | number:2}}</td>

                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <article class="col col-sm-12">
        <div class="jarviswidget" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-bar-chart-o txt-color-darken"></i> </span>
                <h2>Pre-Order Planning Chart</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="row">
                        <section class="col col-sm-12">
                            <div style="border:solid 1px #ddd">
                                <div id="preOrderPlanningBeforeTet"></div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="row">
                        <section class="col col-sm-12">
                            <div style="border:solid 1px #ddd">
                                <div id="preOrderPlanningAfterTet"></div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li>
            <a href="javascript:void(0)" class="btn btn-default btn-sm" ng-click="event.search()">
                <i class="fa fa-search"></i>
            </a>
        </li>
    </ul>
}

@section pagejs {
    <script type="text/javascript">
        var context = {
            serviceUrl: '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/preorderplanningoverviewrpt/',
            token : '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]'
        }
    </script>
    <script src="~/Views/PreOrderPlanningOverviewRpt/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/jsonService2.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Views/PreOrderPlanningOverviewRpt/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
