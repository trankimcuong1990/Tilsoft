@{
    string Season = Library.OMSHelper.Helper.GetCurrentSeason();
    ViewBag.Title = "Management Info: Factory Sales " + Season;
    ViewBag.Module = "Management Info: Factory Sales " + Season;    
}
<style>
    .tilsoft-table .tilsoft-table-body {
        height: auto !important;
        max-height: none !important;
    }
</style>

<div class="row" style="margin-top: 15px;">
    <!-- show report for management level -->
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget well jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <div>
                <div class="widget-body no-padding">
                    <div>
                        <div class="tilsoft-table">
                            <div style="width: 100%; overflow-y: hidden; height: auto; margin-top: 0px;" class="tilsoft-table-body">
                                <table>
                                    <tbody>
                                        @*<tr style="background:#c8ccaf">
                                            <td colspan="8" style="text-align:center;font-weight:bold;vertical-align:middle">PAFF REPORT</td>
                                            <td colspan="2" style="text-align:center;font-weight:bold;vertical-align:middle">FACTORY PROFOMA &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;INVOICE</td>
                                            <td style="text-align:center;font-weight:bold;vertical-align:middle"></td>
                                        </tr>*@
                                        <tr>
                                            <th style="width: 30px; text-align: center;">#</th>
                                            <th style="width: 120px;font-weight:bold">
                                                <a href="#" ng-click="sortType = 'factoryUD'; sortReverse = !sortReverse">
                                                    Factory
                                                    <span ng-show="sortType == 'factoryUD' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryUD' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 120px;font-weight:bold">
                                                <a href="#" ng-click="sortType = 'locationNM'; sortReverse = !sortReverse">
                                                    City
                                                    <span ng-show="sortType == 'locationNM' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'locationNM' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 120px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'manufacturerCountryNM'; sortReverse = !sortReverse">
                                                    Country
                                                    <span ng-show="sortType == 'manufacturerCountryNM' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'manufacturerCountryNM' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'factoryName'; sortReverse = !sortReverse">
                                                    Factory Name
                                                    <span ng-show="sortType == 'factoryName' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryName' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 100px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'numContOrder'; sortReverse = !sortReverse">
                                                    Proforma Invoice Confirmed Cont
                                                    <span ng-show="sortType == 'numContOrder' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'numContOrder' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 100px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'numContShipped'; sortReverse = !sortReverse">
                                                    Shipped Cont
                                                    <span ng-show="sortType == 'numContShipped' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'numContShipped' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 100px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'numContTobeShipped'; sortReverse = !sortReverse">
                                                    To be Shipped Cont
                                                    <span ng-show="sortType == 'numContTobeShipped' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'numContTobeShipped' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            @*<th style="width: 90px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'factoryProformaInvoiceTotalAmount'; sortReverse = !sortReverse">
                                                    Factory Proforma Invoice Amount
                                                    <span ng-show="sortType == 'factoryProformaInvoiceTotalAmount' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryProformaInvoiceTotalAmount' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 80px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'factoryProformaInvoiceTotalCont'; sortReverse = !sortReverse">
                                                    Factory Proforma Invoice Cont
                                                    <span ng-show="sortType == 'factoryProformaInvoiceTotalCont' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryProformaInvoiceTotalCont' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>*@
                                            <th style="width: 100px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'factoryInvoiceTotalAmount'; sortReverse = !sortReverse">
                                                    Factory Purchasing Invoice Amount
                                                    <span ng-show="sortType == 'factoryInvoiceTotalAmount' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryInvoiceTotalAmount' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                            <th style="width: 100px;font-weight: bold;">
                                                <a href="#" ng-click="sortType = 'factoryInvoiceTotalCont'; sortReverse = !sortReverse">
                                                    Factory Purchasing Invoice Cont
                                                    <span ng-show="sortType == 'factoryInvoiceTotalCont' && sortReverse" class="fa fa-caret-down"></span>
                                                    <span ng-show="sortType == 'factoryInvoiceTotalCont' && !sortReverse" class="fa fa-caret-up"></span>
                                                </a>
                                            </th>
                                        </tr>

                                        <tr style="background:#eff;height:20px">
                                            <td style="text-align: right;"></td>
                                            <td style="text-align:center"><input type="text" style="height:90%" ng-model="filters.factoryUD" /></td>
                                            <td style="text-align:center"><input type="text" style="height:90%" ng-model="filters.locationNM" /></td>
                                            <td style="text-align:center"><input type="text" style="height:90%" ng-model="filters.manufacturerCountryNM" /></td>
                                            <td style="text-align: left;"><input type="text" style="height:90%" ng-model="filters.factoryName" /></td>
                                            <td style="text-align:right"><input type="text" style="height:90%" ng-model="filters.numContOrder" /></td>
                                            <td style="text-align:right"><input type="text" style="height:90%" ng-model="filters.numContShipped" /></td>
                                            <td style="text-align:right"><input type="text" style="height:90%" ng-model="filters.numContTobeShipped" /></td>
                                            @*<td style="text-align:right"><input type="text" style="height:90%" ng-model="filters.factoryProformaInvoiceTotalAmount" /></td>
                                            <td style="text-align: right;"><input type="text" style="height:90%" ng-model="filters.factoryProformaInvoiceTotalCont" /></td>*@
                                            <td style="text-align: right;"><input type="text" style="height:90%" ng-model="filters.factoryInvoiceTotalAmount" /></td>
                                            <td style="text-align: right;"><input type="text" style="height:90%" ng-model="filters.factoryInvoiceTotalCont" /></td>
                                        </tr>

                                        <tr style="background:#eff">
                                            <td colspan="5" style="font-weight:bold">Total({{data.factorySales.length}}) factories</td>
                                            <td style="text-align:right; font-weight:bold">{{resultValue | sumOfFloatValue:'numContOrder' | number : 1}}</td>
                                            <td style="text-align:right; font-weight:bold">{{resultValue | sumOfFloatValue:'numContShipped' | number : 1}}</td>
                                            <td style="text-align:right; font-weight:bold">{{resultValue | sumOfFloatValue:'numContTobeShipped' | number : 1}}</td>
                                            @*<td style="text-align:right; font-weight:bold">${{resultValue | sumOfFloatValue:'factoryProformaInvoiceTotalAmount' | number : 0}}</td>
                                            <td style="text-align:right; font-weight:bold">{{resultValue | sumOfFloatValue:'factoryProformaInvoiceTotalCont' | number : 1}}</td>*@
                                            <td style="text-align:right; font-weight:bold">${{resultValue | sumOfFloatValue:'factoryInvoiceTotalAmount' | number : 0}}</td>
                                            <td style="text-align:right; font-weight:bold">{{resultValue | sumOfFloatValue:'factoryInvoiceTotalCont' | number : 0}}</td>
                                        </tr>
                                        <tr ng-repeat="item in resultValue = (data.factorySales | orderBy:sortType:sortReverse | filter:{factoryUD : filters.factoryUD,locationNM : filters.locationNM, manufacturerCountryNM : filters.manufacturerCountryNM, factoryName : filters.factoryName, numContOrder : filters.numContOrder, numContShipped : filters.numContShipped, factoryProformaInvoiceTotalAmount : filters.factoryProformaInvoiceTotalAmount, factoryProformaInvoiceTotalCont : filters.factoryProformaInvoiceTotalCont, factoryInvoiceTotalAmount : filters.factoryInvoiceTotalAmount,factoryInvoiceTotalCont : filters.factoryInvoiceTotalCont})">
                                            <td style="text-align: right;">{{$index+1}}</td>
                                            <td style="text-align:center">{{item.factoryUD}}</td>
                                            <td style="text-align:left">{{item.locationNM}}</td>
                                            <td style="text-align: left">{{item.manufacturerCountryNM}}</td>
                                            <td style="text-align: left;">{{item.factoryName}}</td>
                                            <td style="text-align:right">{{item.numContOrder | number : 1}}</td>
                                            <td style="text-align:right">{{item.numContShipped | number : 1}}</td>
                                            <td style="text-align:right">{{(item.numContOrder - item.numContShipped) | number : 1}}</td>
                                            @*<td style="text-align:right">${{item.factoryProformaInvoiceTotalAmount | currency:'':0}}</td>
                                            <td style="text-align: right;">{{item.factoryProformaInvoiceTotalCont | number:'':1}}</td>*@
                                            <td style="text-align:right">${{item.factoryInvoiceTotalAmount | currency:'':0}}</td>
                                            <td style="text-align:right">{{item.factoryInvoiceTotalCont | currency:'':0}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/miFactorySaleRpt/';
        jsonService.supportServiceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/support/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';

        var context = {
            season: '@Season'
        }
    </script>
    <script src="~/Angular/app/miFactorySaleRpt/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/miFactorySaleRpt/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}