                            <label>Remark</label>
                            <label class="input">
                                <textarea class="form-control" style="background:none" ng-model="data.remark" rows="4" ng-readonly="data.purchaseInvoiceStatusID != 1"></textarea>
                                @*<input class="form-control" type="text" ng-model="data.remark" ng-readonly="data.purchaseInvoiceStatusID != 1" />*@
                            </label>
                        </section>
                    </div>
                </div>

            </div>
        </div>
    </div>

