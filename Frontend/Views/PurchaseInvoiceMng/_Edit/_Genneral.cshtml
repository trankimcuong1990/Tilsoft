<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>General</h2>
        </header>
        <div>
            <div class="jarviswidget-editbox"></div>
            <div class="widget-body">
                <div class="smart-form">
                    <div class="row">

                        <section class="col col-sm-2">
                            <label>Type</label>
                            <label class="input" ng-if="!data.purchaseInvoiceID>0">
                                <select class="form-control" ng-model="data.purchaseInvoiceTypeID" ng-options="item.purchaseInvoiceTypeID as item.purchaseInvoiceTypeNM for item in supportData.purchaseInvoiceTypeDTOs" ng-change="event.resetDetail()">
                                    <option value=""></option>
                                </select>
                            </label>
                            <span class="form-control" ng-if="data.purchaseInvoiceID>0">{{data.purchaseInvoiceTypeNM}}</span>
                        </section>

                        <section class="col col-sm-2">
                            <label>Status</label>
                            <label class="input">
                                <select disabled class="form-control"
                                        ng-model="data.purchaseInvoiceStatusID"
                                        ng-change="purchaseInvoiceStatus.setPurchaseInvoiceStatus()"
                                        ng-options="item.purchaseInvoiceStatusID as item.purchaseInvoiceStatusNM for item in supportData.purchaseInvoiceStatusDTOs">
                                    <option value=""></option>
                                </select>
                            </label>
                        </section>
                        <section class="col col-sm-8">
                            <label>Tracking Info</label>
                            <span class="form-control">
                                Created by
                                <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.createdBy}}" da data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="700">
                                    {{data.creatorName}}
                                </a> at {{data.createdDate}},

                                Updated by
                                <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.updatedBy}}" da data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="700">
                                    {{data.updatorName}}
                                </a> at {{data.updatedDate}},

                                <span ng-if="data.isConfirmed===true||data.isConfirmed===false">
                                    {{data.isConfirmed===true?'Confirmed by':''}}
                                    {{data.isConfirmed===false?'Un-Confirmed by':''}}
                                    <a href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{data.updatedBy}}" da data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="700">
                                        {{data.confirmerName}}
                                    </a> at {{data.confirmedDate}}
                                </span>

                            </span>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-sm-2">
                            <label>Doc Code</label>
                            <label class="input">
                                <input class="form-control" type="text" ng-model="data.purchaseInvoiceUD" readonly />
                            </label>
                        </section>

                        <section class="col col-sm-2">
                            <label>Invoice Date</label>
                            <label class="input-group" ng-if="data.purchaseInvoiceStatusID == 1">
                                <input type="text" class="form-control" avs-calendar ng-data-source="data.purchaseInvoiceDate" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </label>
                            <input class="form-control" readonly ng-model="data.purchaseInvoiceDate" ng-if="data.purchaseInvoiceStatusID != 1" />
                        </section>

                        <section class="col col-sm-2">
                            <label>Posting Date</label>
                            <label class="input-group" ng-if="!data.purchaseInvoiceID>0">
                                <input type="text" class="form-control" avs-calendar ng-data-source="data.postingDate" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </label>
                            <input class="form-control" readonly ng-model="data.postingDate" ng-if="data.purchaseInvoiceID>0" />
                        </section>

                        <section class="col col-sm-1">
                            <label>Currency <em class="note note-error" ng-show="(data.currency == null || data.currency == '')">(Required)</em></label>
                            <label class="input" ng-if="data.purchaseInvoiceStatusID == 1">
                                <select class="form-control" ng-model="data.currency" ng-options="item.sname as item.name for item in supportData.spCurrency" required>
                                    <option value=""></option>
                                </select>
                            </label>
                            <label class="input" ng-if="data.purchaseInvoiceStatusID != 1">
                                <span class="form-control">{{data.currency}}</span>
                            </label>
                        </section>

                        <section class="col col-sm-2">
                            <label>
                                Payment Term
                                <em class="note note-error" ng-show="(data.factoryRawMaterialID == null || data.factoryRawMaterialID == '')">(Required Supplier)</em>
                                <em class="note note-error" ng-show="(data.factoryRawMaterialID > 0) && (data.supplierPaymentTerm == null || data.supplierPaymentTerm == '')">(Required)</em>
                            </label>
                            <label class="input" ng-show="data.purchaseInvoiceStatusID == 1">
                                <select class="form-control" ng-model="data.supplierPaymentTerm"
                                        ng-options="item.supplierPaymentTermID as item.supplierPaymentTermNM for item in supportData.paymentTerms">
                                    <option value=""></option>
                                </select>
                            </label>
                            <label class="input" ng-show="data.purchaseInvoiceStatusID != 1">
                                <select class="form-control" ng-model="data.supplierPaymentTerm"
                                        disabled
                                        ng-options="item.supplierPaymentTermID as item.supplierPaymentTermNM for item in supportData.paymentTerms">
                                    <option value=""></option>
                                </select>
                            </label>
                        </section>

                        <section class="col col-sm-3">
                            <label>Attached File</label>
                            <label class="input">
                                <span class="form-control">
                                    {{data.friendlyName}}
                                    <div style="position: absolute; right: 5px; top: 5px;">
                                        <a ng-disabled="!data.fileLocation || data.friendlyName==null" href="javascript:void(0);" class="btn btn-primary btn-xs" style="font-size: 11px;" ng-click="event.downloadFile()">Download</a>
                                        <a href="javascript:void(0);" class="btn btn-primary btn-xs" style="font-size: 11px;" ng-click="event.changeFile()">Change</a>
                                        <a ng-disabled="!data.fileLocation || data.friendlyName==null" href="javascript:void(0);" class="btn btn-danger btn-xs" style="font-size: 11px;" ng-click="event.removeFile()">Remove</a>
                                    </div>
                                </span>
                            </label>
                        </section>


                    </div>
                    <div class="row">
                        <section class="col col-sm-4">
                            <label>
                                Supplier
