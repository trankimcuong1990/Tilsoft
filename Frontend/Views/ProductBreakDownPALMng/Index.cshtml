@{
    var guid = Guid.NewGuid().ToString().Replace("-", "");
    var token = Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION];
    var serviceRoot = System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"];
    var pageSize = System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
    var cookieID = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var backendReportUrl = @System.Configuration.ConfigurationManager.AppSettings["BackendReportUrl"];


    ViewBag.Title = "Product Break Down(PAL)";
    ViewBag.Module = "Product Break Down(PAL)";
    ViewBag.Icon = "fa-table";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Product Break Down(PAL)</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div class="tilsoft-table-wrapper" avs-scrollable-table ng-load-next-page="event.loadNextPage()" ng-sort-data="event.sortData">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1725px">
                                <div style="width: 65px; height: 60px !important; text-align: center !important; background-color: #eee">Total<br /><b style="color: #0026ff">{{totalRows | number}}</b></div>
                                <div style="width: 45px; height: 60px !important; text-align: center !important; background-color: #eee">#</div>
                                <div style="width: 75px; height: 60px !important; text-align: center !important; background-color: #eee" class="sorting" data-colname="ClientUD">Client</div>
                                <div style="width: 120px; height: 60px !important; text-align: center !important; background-color: #eee" class="sorting">Image</div>
                                <div style="width: 120px; height: 60px !important; text-align: center !important; background-color: #eee" class="sorting" data-colname="ModelUD">Model</div>
                                <div style="width: 150px; height: 60px !important; text-align: center !important; background-color: #eee" class="sorting" data-colname="ArticleCode">Product</div>
                                <div style="width: 180px; height: 60px !important; text-align: center !important; background-color: #eee" class="sorting" data-colname="SampleProductUD">Sample</div>
                                <div class="no-padding" style="width: 160px; height: 60px !important; text-align: center !important; background-color: #eee">
                                    <div class="no-padding" style="width: 100%; height: 30px; border-right: none; line-height: 30px;">Final Amount</div>
                                    <div class="no-padding" style="width: 100%; height: 30px;">
                                        <div class="no-padding" style="width: 80px; text-align: center; height: 30px; line-height: 30px;">VND</div>
                                        <div class="no-padding" style="text-align: center; height: 30px; line-height: 30px;">USD</div>
                                    </div>
                                </div>
                                <div style="width: 90px; height: 60px !important; text-align: center !important; background-color: #eee">Item Size</div>
                                <div style="width: 90px; height: 60px !important; text-align: center !important; background-color: #eee">Carton Size</div>
                                <div style="width: 120px; height: 60px !important; text-align: center !important; background-color: #eee">Steel Frame</div>
                                <div style="width: 120px; height: 60px !important; text-align: center !important; background-color: #eee">Cushion</div>
                                <div style="width: 200px; height: 60px !important; text-align: center !important; background-color: #eee">Remark</div>
                                <div style="width: 180px; height: 60px !important; text-align: center !important; background-color: #eee">More Info</div>
                                <div style="border-bottom: none;height:60px"></div>
                            </div>
                            <div class="tilsoft-table-filter" style="width: 1725px; margin-top: 60px">
                                <div style="width: 65px; height: 45px !important; text-align: center !important; background-color: #eee">
                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Apply Filter" ng-click="event.refresh()"><i class="fa fa-filter"></i></a>
                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="event.clear()"><i class="fa fa-ban"></i></a>
                                </div>
                                <div style="width: 45px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 75px; height: 45px !important; text-align: center !important; background-color: #eee">
                                    <input class="form-control search-filter" type="text" style="width: 100%" ng-model="filters.clientSearch" />
                                </div>
                                <div style="width: 120px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 120px; height: 45px !important; text-align: center !important; background-color: #eee">
                                    <input class="form-control search-filter" type="text" style="width: 100%" ng-model="filters.modelSearch" />
                                </div>
                                <div style="width: 150px; height: 45px !important; text-align: center !important; background-color: #eee">
                                    <input class="form-control search-filter" type="text" style="width: 100%" ng-model="filters.productSearch" />
                                </div>
                                <div style="width: 180px; height: 45px !important; text-align: center !important; background-color: #eee">
                                    <input class="form-control search-filter" type="text" style="width: 100%" ng-model="filters.sampleSearch" />
                                </div>
                                <div style="width: 160px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 90px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 90px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 120px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 120px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 200px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="width: 180px; height: 45px !important; text-align: center !important; background-color: #eee"></div>
                                <div style="border-bottom: none"></div>
                            </div>
                            <div class="tilsoft-table-body" style="margin-top: 105px; width: 1725px">
                                <table>
                                    <tbody>
                                        <tr ng-repeat="item in data">
                                            <td style="width: 65px; text-align: center">
                                                @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                                {
                                                    <a class="btn btn-default btn-xs font-11" href="javascript:void(0)" style="width: 53px" title="View (Read Only)" ng-click="event.view(item.productBreakDownID)">
                                                        <i class="fa fa-folder-open"></i> View
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-primary btn-xs font-11" href="javascript:void(0)" title="Edit" style="width: 53px" ng-click="event.edit(item.productBreakDownID)" ng-if="!item.isConfirmed">
                                                        <i class="fa fa-pencil-square-o"></i> Edit
                                                    </a>
                                                    <a class="btn btn-default btn-xs font-11" href="javascript:void(0)" title="View (Read Only)" style="width: 53px" ng-click="event.view(item.productBreakDownID)" ng-if="item.isConfirmed">
                                                        <i class="fa fa-folder-open"></i> View
                                                    </a>
                                                }
                                                @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                                {
                                                    <a class="btn btn-danger btn-xs font-11" href="#" title="Delete" style="width: 53px; margin-top: 3px" ng-click="event.delete(item)" ng-if="!item.isConfirmed">
                                                        <i class="fa fa-times"></i> Delete
                                                    </a>
                                                }
                                            </td>
                                            <td style="width: 45px; text-align: center">{{$index + 1}}</td>
                                            <td style="width: 75px; text-align: center">{{item.clientUD}}</td>
                                            <td style="width: 120px; text-align:center;">
                                                <a href="{{item.fileLocation}}" target="_blank" title="{{item.friendlyName}}">
                                                    <img src="{{item.thumbnailLocation}}" style="width: 100px;" />
                                                </a>
                                            </td>
                                            <td style="width: 120px; text-align: left;color: #8a3c05;">
                                                <b>{{item.modelUD}}</b>
                                                <label>{{item.modelNM}}</label>
                                            </td>
                                            <td style="width: 150px; text-align: left;color: #02168a;">
                                                <b>{{item.articleCode}}</b>
                                                <label>{{item.description}}</label>
                                            </td>
                                            <td style="width: 180px; text-align: left;color: #1c5e36;">
                                                <b>{{item.sampleProductUD}}</b>
                                                <label>{{item.articleDescription}}</label>
                                            </td>
                                            <td style="width: 80px; text-align: right;">
                                                {{item.finalAmountVND | number : 0}}
                                            </td>
                                            <td style="width: 80px; text-align: right;">
                                                <label ng-if="item.priceWithExchangeRate != null">$ {{item.priceWithExchangeRate | number : 2}}</label>
                                            </td>
                                            <td style="width: 90px">{{item.itemSize}}</td>
                                            <td style="width: 90px">{{item.cartonSize}}</td>
                                            <td style="width: 120px">{{item.frameDescription}}</td>
                                            <td style="width: 120px">{{item.cushionDescription}}</td>
                                            <td style="width: 200px">{{item.remark}}</td>
                                            <td style="width: 180px">
                                                <label>
                                                    Update By: <i class="fa fa-user"></i> {{item.updatorName}}
                                                </label>
                                                <label>
                                                    Update Date: {{item.updatedDate}}
                                                </label>
                                            </td>
                                            <td style="border-bottom: none"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
<ul id="sparks">
    <li class="sparks-info">
        <a href="javascript:void(0);" class="btn btn-default btn-sm" ng-click="event.refresh()" title="Search">
            <i class="fa fa-search"></i> Search
        </a>
    </li>
    <li class="sparks-info">
        <a href="javascript:void(0);" class="btn btn-default btn-sm" ng-click="event.refresh()" title="Refresh Page">
            <i class="fa fa-refresh"></i> Refresh
        </a>
    </li>
    <li class="sparks-info">
        <a href="javascript:void(0);" class="btn btn-default btn-sm" ng-click="event.export()" title="Export Excel">
            <i class="fa fa-file-excel-o"></i> Export
        </a>
    </li>
    <li class="sparks-info">
        <a href="javascript:void(0)" class="btn btn-default btn-sm @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="Create new" ng-click="event.create(0)">
            <i class="fa fa-file-o"></i> New
        </a>
    </li>
</ul>
}

@section pagejs {
    <script type="text/javascript">
        var context = {
            serviceUrl: '@(serviceRoot)/api/productbreakdown-pal/',
            token: '@token',
            pageSize: '@pageSize',
            cookieID: '@cookieID',
            createUrl: '@Url.Action("Edit", "ProductBreakDownPALMng", new { id = UrlParameter.Optional })/',
            editUrl: '@Url.Action("Edit", "ProductBreakDownPALMng", new { id = UrlParameter.Optional })/',
            indexUrl: '@Url.Action("Index", "ProductBreakDownPALMng")',
            viewUrl: '@Url.Action("View", "ProductBreakDownPALMng", new { id = UrlParameter.Optional })/',
            reportUrl: '@backendReportUrl'
        }
    </script>
    <script type="text/javascript" src="~/Views/ProductBreakDownPALMng/index.js?v=@guid"></script>
    <script type="text/javascript" src="~/Angular/app/jsonService2.js?v=@guid"></script>
    <script type="text/javascript" src="~/Views/ProductBreakDownPALMng/service.js?=@guid"></script>
}

