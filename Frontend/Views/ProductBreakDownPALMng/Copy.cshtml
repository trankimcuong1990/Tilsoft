                                    @*<input id="supportProductID" class="form-control" style="height: 30px; font-family: Arial" type="text" avs-remote-auto-complete ng-request-param="autocompleteProduct.api" ng-init-param="data.articleCode" ng-init-param-2="modelID" ng-model="data.articleCode" ng-item-value="autocompleteProduct.product" ng-item-selected="event.selectProduct(autocompleteProduct.product)" ng-change="event.changeProduct(autocompleteProduct.product)" data-method="POST" data-format-function="formatProduct" ng-readonly="data.isConfirmed" ng-if="data.modelID != null && data.sampleProductID == null" />*@
