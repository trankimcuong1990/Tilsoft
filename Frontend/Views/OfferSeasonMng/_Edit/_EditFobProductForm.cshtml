                                            <a href="javascript:void(0)" class="btn btn-primary btn-xs" ng-click="localFilterItem()">
                                                <i class="fa fa-filter"></i> Filter
                                            </a>
                                            <a href="javascript:void(0)" class="btn btn-warning btn-xs" ng-click="localClearFilter()">
                                                <i class="fa fa-ban"></i> Clear Filter
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                                <div style="font-size: 11px;">
                                    Price Source: <font style="display: inline-block; margin-right: 15px;" ng-repeat="item in data.planingPurchasingPriceSourceDTOs">{{item.planingPurchasingPriceSourceID}}: {{item.planingPurchasingPriceSourceNM}}</font>
                                </div>
                                <div class="avs-table-wrapper" avs-table grid-handler="productGridHandler">
