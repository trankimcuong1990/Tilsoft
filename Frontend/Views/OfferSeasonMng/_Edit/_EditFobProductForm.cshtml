<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>General Info</h2>
            <a class="btn btn-primary btn-sm" href="javascript:void(0)" ng-click="updateOfferSeason()"><i class="fa fa-save"></i> Update Info</a>
            <h2>
                <span><b>&nbsp;&nbsp;ExRate: {{getExRate() | number : 2}}</b></span>
                <span><b>&nbsp;&nbsp; | LC: {{getLCCostPercent() | number : 1}}%</b></span>
                <span><b>&nbsp;&nbsp; | Interest: {{getInterestCostPercent() | number : 1}}%</b></span>
                <span><b>&nbsp;&nbsp; | Bonus: {{getBonusPercent() | number : 1}}%</b></span>
            </h2>
        </header>
        <div>
            <div>
                <div class="smart-form">
                    <div class="row">
                        <section class="col col-lg-1">
                            <label>Offer Type</label>
                            <label class="input">
                                <input class="form-control" type="text" ng-model="data.offerSeasonDTO.offerSeasonTypeNM" readonly />
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>Season</label>
                            <label class="input">
                                <select class="form-control" ng-disabled="data.offerSeasonDTO.offerSeasonID>0"
                                        ng-model="data.offerSeasonDTO.season"
                                        ng-options="gItem.seasonText as gItem.seasonValue for gItem in data.seasons | orderBy:'-seasonValue'">
                                    <option value=""></option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section class="col col-lg-2">
                            <label>Client (Code: <a href="@Url.Action("Overview","Client")/{{data.offerSeasonDTO.clientID}}" target="_blank"><u>{{data.offerSeasonDTO.clientUD}}</u></a></label>)
                            <label class="input">
                                <input type="text" class="form-control" avs-remote-auto-complete style="font-family: Arial; font-size: 12px; text-transform: uppercase"
                                       ng-request-param="clientBox.request"
                                       data-method="POST"
                                       ng-init-param="data.offerSeasonDTO.clientNM"
                                       ng-model="data.offerSeasonDTO.clientNM"
                                       ng-item-value="clientBox.data"
                                       ng-item-selected="clientBox.selectedItem(clientBox.data)"
                                       data-format-function="formatAutcompleteClient"
                                       ng-readonly="data.offerSeasonDTO.offerSeasonID>0" />
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>Acc Mngr</label>
                            <label class="input">
                                <input class="form-control" type="text" ng-model="data.offerSeasonDTO.saleUD" readonly />
                            </label>
                        </section>

                        <section class="col col-lg-2">
                            <label>Offer Code</label>
                            <label class="input">
                                <input class="form-control" type="text" ng-model="data.offerSeasonDTO.offerSeasonUD" readonly />
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>Testing Cost</label>
                            <label class="input">
                                <span class="form-control" style="text-align:right">{{inspectionCostUSD() | currency : '$' : 2}}</span>
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>Sample Cost</label>
                            <label class="input">
                                <span class="form-control" style="text-align:right">{{sampleCostUSD() | currency : '$' : 2}}</span>
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>%Commision</label>
                            <label class="input">
                                <span class="form-control" style="text-align:right">
                                    <span title="default commission">{{data.offerSeasonDTO.defaultCommissionPercent | number : 1}}</span> / <span title="avg commission">{{getTotalRow('commissionPercent') | number : 1}}</span>
                                </span>
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>Transport Fee</label>
                            <label class="input">
                                <input type="text" class="form-control" style="text-align:right"
                                       avs-number-2
                                       ng-model="data.offerSeasonDTO.estTransportationPerContainerEUR"
                                       ng-decimal="1"
                                       readonly />
                            </label>
                        </section>

                        <section class="col col-lg-1">
                            <label>VAT</label>
                            <label class="input">
                                <select class="form-control"
                                        ng-model="data.offerSeasonDTO.vat"
                                        ng-options="gItem.percent as gItem.name for gItem in data.vat">
                                    <option value=""></option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
