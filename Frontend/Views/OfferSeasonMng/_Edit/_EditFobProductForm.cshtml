                                                        {
                                                            <a href="javascript:void(0)" ng-click="exportDetail()" style="width: 80px; margin-top: 5px; display: block; text-transform: none;" class="btn btn-default btn-xs font-11"><i class="fa fa-file-excel-o"></i> Export</a>
                                                        }
