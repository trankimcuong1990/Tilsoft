                                                    <td style="width: 80px;" class="sorting" data-colname="saleAmount">Sale Amount ({{data.offerSeasonDTO.currency}})</td>

                                                    @*VAT*@
                                                    <td style="width: 80px;" class="sorting" data-colname="vatAmount">VAT ({{data.offerSeasonDTO.currency}})</td>

