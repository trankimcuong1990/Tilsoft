            <ul class="nav nav-tabs pull-left in tab-content-header">
                <li class="active">
                    <a data-toggle="tab" ng-click="selectedTab('tabProduct')" href="javascript:void(0)"> <i class="fa fa-database"></i> <span class="hidden-mobile hidden-tablet">Product</span> </a>
                </li>
            </ul>
            @if (userInfo.Data.ModuleSpecialPermissionAccesses.Count(o => o.ModuleSpecialPermissionUD == Frontend.Helper.ConstantIdentifier.SPECIAL_PERMISSION_APPROVE_OFFER) > 0)
            {
                <ul class="nav nav-tabs pull-left in tab-content-header">
                    <li>
                        <a data-toggle="tab" ng-click="selectedTab('tabManagerRemark')" href="javascript:void(0)"> <i class="fa fa-database"></i> <span class="hidden-mobile hidden-tablet">Manager Remark</span> </a>
                    </li>
                </ul>
            }

            <a class="btn btn-primary btn-sm" href="javascript:void(0)" ng-click="updateOfferSeasonDetail2()" ng-disabled="!data.offerSeasonDTO.offerSeasonID>0 || countItemEditing()===0"><i class="fa fa-save"></i> Update All Item</a>
