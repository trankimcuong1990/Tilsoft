            {
                <a class="btn btn-success btn-sm" href="javascript:void(0)" ng-click="approveAllItem()" ng-disabled="countItemNeedApprove()===0" title="Approve all item is in NEED APPROVE status"><i class="fa fa-thumbs-o-up"></i> Approve All Item</a>
            }
            <a class="btn btn-warning btn-sm" href="javascript:void(0)" ng-click="askForApprovalAllItem()" ng-disabled="!data.offerSeasonDTO.offerSeasonID>0 || countItemAskForApproval()===0"><i class="fa fa-database"></i> Ask Approval All Item</a>
            <a style="color:red;float:right" ng-if="!data.offerSeasonDTO.isClientEstimatedAdditionalCostConfirmed" href="@Url.Action("Edit","Client")/{{data.offerSeasonDTO.clientID}}" target="_blank"><u>Please confirm the estimated cost before asking approval !!!</u></a>
