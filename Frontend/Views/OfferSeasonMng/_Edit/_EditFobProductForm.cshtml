                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#CommissionHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*lc cost*@
                                                    <td style="width: 80px;" class="sorting" data-colname="lcCostInUSD">
                                                        LC Cost<br />(USD)
                                                        <br />
                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#LCCostHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*interest cost*@
                                                    <td style="width: 80px;" class="sorting" data-colname="interestInUSD">
                                                        Interest Cost<br />(USD)
                                                        <br />
                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#InterestHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*damages*@
                                                    <td style="width: 80px;" class="sorting" data-colname="damagesCostInUSD">
                                                        Damages Cost<br />(USD)
                                                        <br />
                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#DamagesHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*transport cost*@
                                                    <td style="width: 80px;" class="sorting" data-colname="transportationInUSD">
                                                        Transport Cost<br />(USD)
                                                        <br />
                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#TransportCostHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*bonus cost*@
                                                    <td style="width: 80px;" class="sorting" data-colname="bonusCostInUSD">
                                                        Bonus Cost<br />(USD)
                                                        <br />
                                                        <a href="javascript:void(0)" data-toggle="modal" data-target="#BonusCostHelp"><i class="fa fa-question-circle"></i></a>
                                                    </td>

                                                    @*favourite factory*@
                                                    <td style="width: 90px;" class="sorting" data-colname="favouriteFactoryID">Favourite Factory</td>

                                                    @*remark*@
                                                    <td style="width: 200px;" class="sorting" data-colname="remark">Remark</td>

                                                    @*tracking*@
                                                    <td style="width: 200px;" class="sorting" data-colname="statustorName">Tracking</td>
                                                
                                                    <td></td>    
