@{
    ViewBag.Title = "Search Seat Cushion";
    ViewBag.Module = "Seat Cushion";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div avs-scroll grid-handler="gridHandler" id="searchResult" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1320px;">
                                <div style="width: 70px;"></div>
                                <div style="width: 100px;" class="sorting" data-colname="IsEnabled">Enabled</div>
                                <div style="width: 100px;" class="sorting" data-colname="IsStandard">Standard</div>
                                <div style="width: 220px;">Image</div>
                                <div style="width: 100px; text-align: center;" class="sorting" data-colname="Season">Season</div>
                                <div style="width: 80px; text-align: center;" class="sorting" data-colname="SeatCushionUD">Code</div>
                                <div style="width: 170px;" class="sorting" data-colname="SeatCushionNM">Name</div>
                                <div style="width: 150px;" class="sorting" data-colname="ProductGroupNM">Group</div>
                                <div style="width: 80px;" class="sorting" data-colname="DisplayIndex">Index</div>
                                <div><i class="fa fa-list sorting_desc"></i> More Info</div>
                            </div>

                            <div class="tilsoft-table-filter" style="width: 1320px;">
                                <div style="text-align: center; width: 70px; vertical-align:middle">
                                    <a href="javascript:void(0)" class="btn btn-{{isDefaultFilter?'default':'primary'}} btn-xs" title="Apply Filter" ng-click="event.reload()"><i class="fa fa-filter"></i></a>
                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="event.clearFilter()"><i class="fa fa-ban"></i></a>
                                </div>
                                <div style="width: 100px; text-align: center; vertical-align: middle">
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.IsEnabled" ng-options="standard.yesNoValue as standard.yesNoText for standard in standardValues">
                                            <option value=""></option>
                                        </select>
                                    </label>
                                </div>
                                <div style="width: 100px; text-align: center; vertical-align: middle">
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.IsStandard" ng-options="standard.yesNoValue as standard.yesNoText for standard in standardValues">
                                            <option value=""></option>
                                        </select>
                                    </label>
                                </div>
                                <div style="width: 220px; text-align: center; vertical-align: middle"></div>
                                <div style="width: 100px">
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.Season" ng-options="season.seasonValue as season.seasonText for season in seasons">
                                            <option value=""></option>
                                        </select>
                                    </label>
                                </div>
                                <div style="width: 80px; text-align: center; vertical-align: middle"><input type="text" class="form-control search-filter" ng-model="filters.SeatCushionUD"/></div>
                                <div style="width: 170px; text-align: center; vertical-align: middle"><input type="text" class=" form-control search-filter" ng-model="filters.SeatCushionNM"/></div>
                                <div style="width: 150px; text-align: center; vertical-align: middle">
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.ProductGroupID" ng-options="group.productGroupID as group.productGroupNM for group in productGroups">
                                            <option value=""></option>
                                        </select>
                                    </label>
                                </div>
                                <div style="width: 80px; text-align: center; vertical-align: middle"></div>
                                <div style="text-align: center; vertical-align: middle"></div>
                            </div>

                            <div class="tilsoft-table-body" style="width: 1320px;">
                                <table>
                                    <tr ng-repeat="model in data">
                                        <td style="text-align: center; width: 69px;">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "SeatCushion")/{{model.seatCushionID}}" style="width:59px;" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "SeatCushion")/{{model.seatCushionID}}" ng-if="model.total == 0" style="width:59px;" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                                <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "SeatCushion")/{{model.seatCushionID}}" ng-if="model.total != 0" style="width:59px;" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }

                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                            {
                                                <a class="btn btn-danger btn-xs font-11" href="javascript:void(0)" ng-click="event.delete(model.seatCushionID)" ng-if="model.total == 0" style="width:59px;margin-top:3px" title="Delete"><i class=" fa fa-times"></i> Del</a>
                                            }
                                        </td>
                                        <td style="text-align: center; width: 100px;"><input type="checkbox" ng-model="model.isEnabled" disabled /></td>
                                        <td style="text-align: center; width: 100px;"><input type="checkbox" ng-model="model.isStandard" disabled /></td>
                                        <td style="width: 220px; text-align: center; vertical-align: middle;">
                                            <a href="{{model.imageFile_DisplayUrl}}" data-featherlight="image">
                                                <img style="width: 95%;" ng-src="{{model.imageFile_DisplayUrl}}" />
                                            </a>
                                        </td>
                                        <td style="text-align: center; width: 100px;">{{model.season}}</td>
                                        <td style="text-align: center; width: 80px;">{{model.seatCushionUD}}</td>
                                        <td style="width: 170px;">{{model.seatCushionNM}}</td>
                                        <td style="width: 150px; text-align: center;">{{model.productGroupNM}}</td>
                                        <td style="text-align: center; width: 80px;">{{model.displayIndex}}</td>

                                        <td>
                                            <span class="box">
                                                <i class="fa fa-user"></i>
                                                <strong>Created By</strong>:
                                                <a ng-if="model.createdBy" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.createdBy}}" dat data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                    {{model.creatorName}}
                                                </a>
                                            </span>
                                            <span class="box"><i class="fa fa-calendar"></i> <strong>Created Date</strong>: {{model.createdDate}}</span>
                                            <span class="box">
                                                <i class="fa fa-user"></i>
                                                <strong>Updated By</strong>:
                                                <a ng-if="model.updatedBy" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.updatedBy}}" dat data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                    {{model.updatorName}}
                                                </a>
                                            </span>
                                            <span class="box"><i class="fa fa-calendar"></i> <strong>Updated Date</strong>: {{model.updatedDate}}</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Edit", "SeatCushion")/0" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Print"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Angular/app/jsonService.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/seatcushion/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        jsonService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
        var context = {
            cookieId: '@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()'
        }
    </script>
    <script src="~/Angular/app/seatCushion/service.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/seatCushion/index.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
