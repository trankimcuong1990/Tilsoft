@{
    ViewBag.Title = "Purchase Request";
    ViewBag.Module = "Purchase Request";
}

<form class="row" id="main-form">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-result" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div avs-scroll grid-handler="gridHandler" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1000px;">
                                <div style="width: 100px;"></div>
                                <div style="width: 120px;" class="sorting" data-colname="PurchaseRequestUD">Request No</div>
                                <div style="width: 90px;" class="sorting" data-colname="PurchaseRequestDate">Request Date</div>
                                <div style="width: 90px;" class="sorting" data-colname="ETA">ETA</div>
                                <div style="width: 140px;" class="sorting" data-colname="PurchaseRequestStatusNM">Status</div>

                                <div style="width: 90px;" class="sorting" data-colname="ApprovedDate">Approved Date</div>
                                <div style="width: 150px;" class="sorting" data-colname="ApproverName">Approve By</div>

                                <div style="width: 90px;" class="sorting" data-colname="RequestedDate">Update Date</div>
                                <div style="width: 150px;" class="sorting" data-colname="RequestorName">Updated By</div>
                                <div style="" class="sorting" data-colname="Remark">Remark</div>
                            </div>
                            <div class="tilsoft-table-filter" style="width: 1000px;">
                                <div style="text-align: center; width: 100px; vertical-align:middle">
                                    <a href="javascript:void(0)" class="btn btn-{{isDefaultFilter?'default':'primary'}} btn-xs" title="Apply Filter" ng-click="event.reload()"><i class="fa fa-filter"></i></a>
                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="event.clearFilter()"><i class="fa fa-ban"></i></a>
                                </div>
                                <div style="width: 120px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.purchaseRequestUD" class="search-filter" /></div>
                                <div style="width: 90px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.purchaseRequestDate" class="search-filter" /></div>
                                <div style="width: 90px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.eta" class="search-filter" /></div>
                                <div style="width: 140px; text-align: center; vertical-align: middle">
                                    <select id="purchaseRequestStatusID" name="purchaseRequestStatusID" ng-model="filters.purchaseRequestStatusID" ng-options="item.purchaseRequestStatusID as item.purchaseRequestStatusNM for item in purchaseRequestStatusDTOs">
                                        <option value=""></option>
                                    </select>
                                </div>

                                <div style="width: 90px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.approvedDate" class="search-filter" /></div>
                                <div style="width: 150px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.approverName" class="search-filter" /></div>

                                <div style="width: 90px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.requestedDate" class="search-filter" /></div>
                                <div style="width: 150px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.requestorName" class="search-filter" /></div>
                                <div style="text-align: center; vertical-align: middle">
                                </div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1000px;">
                                <table>
                                    <tr ng-repeat="item in data">
                                        <td style="width:99px;text-align:center">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "PurchaseRequestMng")/{{item.purchaseRequestID}}" title="view (read only)" target="_blank"><i class="fa fa-folder-open"></i>View</a>
                                            }
                                            else
                                            {
                                                <a  class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "PurchaseRequestMng")/{{item.purchaseRequestID}}" title="Edit" target="_blank"><i class="fa fa-pencil"></i>Edit</a>                                                
                                            }
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                            {
                                                <a class="btn btn-danger btn-xs font-11" href="#" ng-click="event.delete(item)" title="Delete"><i class="fa fa-times"></i>Del</a>
                                            }
                                        </td>
                                        <td style="text-align: left; width: 120px; vertical-align:middle">{{item.purchaseRequestUD}}</td>
                                        <td style="text-align: center; width: 90px; vertical-align:middle">{{item.purchaseRequestDate}}</td>
                                        <td style="text-align: left; width: 90px; vertical-align:middle">{{item.eta}}</td>
                                        <td style="text-align: left; width: 140px; vertical-align:middle">{{item.purchaseRequestStatusNM}}</td>

                                        <td style="text-align: center; width: 90px; vertical-align:middle">{{item.approvedDate}}</td>
                                        <td style="text-align: left; width: 150px; vertical-align:middle">{{item.requestorName}}</td>
                                        
                                        <td style="text-align: center; width: 90px; vertical-align:middle">{{item.requestedDate}}</td>
                                        <td style="text-align: left; width: 150px; vertical-align:middle">{{item.requestorName}}</td>
                                        <td style="text-align: left; vertical-align:middle">{{item.remark}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <span>Found: {{totalRows}} record(s)</span>
                </div>
            </div>
        </div>
    </article>
</form>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Edit", "PurchaseRequestMng")/0" target="_blank" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Views/PurchaseRequestMng/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        var context = {
            serviceUrl: '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/purchase-request/',
            token: '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]',
            pageSize: @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"],
            cookieId: '@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()',
            backendReportUrl: '@System.Configuration.ConfigurationManager.AppSettings["BackendReportUrl"]',
            title:'Purchase Request'
        }
    </script>
    <script src="~/Angular/app/jsonService2.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Views/PurchaseRequestMng/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
