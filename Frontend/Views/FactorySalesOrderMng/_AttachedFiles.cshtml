 <!---Attached files-->
<div class="widget-bodys">

    <section class="col col-lg-12">
        <label>Attached files</label>
        @*<label class="input-group" ng-show="!factorySaleOrder.isConfirmed && !factorySaleOrder.isDeleted">
            <a href="javascript:void(0);" class="btn btn-primary btn-xs" style="margin:20px 0; width: 100px;line-height:27px; height: 30px; border-radius:2px" title="Upload" ng-click="event.addOtherFile()"><i class="fa fa-plus"></i> Add</a>
        </label>*@
    </section>

    <section class="col col-lg-12">
        <div class="tilsoft-table-wrapper">
            <div class="tilsoft-table" style="border-bottom: none;">
                <div class="tilsoft-table-body" style="width: 100%; overflow-y: hidden; min-height: 0px; height: auto; margin-top: 0px;">
                    <table>
                        <tr>
                            <th style="width:5%"><a href="javascript:void(0);" title="Upload" ng-click="event.addOtherFile()"><i class="fa fa-plus"></i> Add File</a></th>
                            <th style="width:35%">File Name</th>
                            <th style="width:60%">Remark</th>
                        </tr>
                        <tr ng-repeat="item in factorySaleOrder.lstFactorySaleOrderAttachedFile">
                            <td style="text-align:center; vertical-align:middle;">
                                <a ng-click="event.removeFile(item)" class="btn btn-danger btn-xs font-11" href="javascript:void(0);" ng-show="!factorySaleOrder.isConfirmed && !factorySaleOrder.isDeleted"><i class=" fa fa-times"></i>Del</a>
                            </td>
                            <td style="vertical-align:middle">
                                <a ng-if="item.otherFileFriendlyName" title="View file" style="font-size: 11px;" ng-href="{{item.otherFileUrl}}" target="_blank">
                                    {{item.otherFileFriendlyName}}
                                </a>
                            </td>

                            <td style="text-align:left" ng-show="!factorySaleOrder.isConfirmed && !factorySaleOrder.isDeleted">
                                <input type="text" ng-model="item.remark" class="form-control" maxlength="50" />
                            </td>
                            <td style="text-align:left" ng-show="factorySaleOrder.isConfirmed || factorySaleOrder.isDeleted">
                                <span class="form-control">{{item.remark}}</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
    
<!---End Attached files-->
