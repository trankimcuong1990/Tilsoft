@section pagejs {
    <script src="~/Angular/app/jsonService.js"></script>
    <script src="~/Angular/app/avfSupplier/service.js"></script>
    <script type="text/javascript">
        var grdFactory = jQuery('#grdFactory').scrollableTable(null, null);

        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/avfsupplier/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';

        var tilsoftApp = angular.module('tilsoftApp', []);
        tilsoftApp.controller('tilsoftController', ['$scope', function ($scope) {
            //
            // property
            //
            $scope.data = null;
            $scope.manufacturerCountries = null;
            $scope.ledgerAccounts = null;
            var totalInvoice = 0;

            //
            // event
            //
            $scope.event = {
                init:function(){
                    jsonService.load(
                        @ViewBag.ID,
                        function (data) {
                            $scope.data = data.data.data;
                            //console.log(data);
                            $scope.ledgerAccounts = data.data.ledgerAccounts;
                            $scope.manufacturerCountries = data.data.manufacturerCountries;
                            $scope.$apply();
                            jQuery('#content').show();

                            // monitor changes
                            $scope.$watch('data', function() {
                                jQuery('#changeNotification').html('<i class="fa fa-save blink_me"></i>');
                            });
                            grdFactory.updateLayout();
                        },
                        function (error) {
                            jsHelper.showMessage('warning', error);

                            $scope.data = null;
                            $scope.manufacturerCountries = null;
                            $scope.$apply();
                        }
                    );
                },
                update: function($event){
                    $event.preventDefault();

                    if($scope.editForm.$valid)
                    {
                        jsonService.update(
                            @ViewBag.ID,
                            $scope.data,
                            function (data) {
                                jsHelper.processMessage(data.message);
                                if(data.message.type == 0) {
                                    $scope.method.refresh(data.data.avfSupplierID);
                                }
                            },
                            function (error) {
                                jsHelper.showMessage('warning', error);
                            }
                        );
                    }
                    else
                    {
                        jsHelper.showMessage('warning', '@Frontend.Properties.Resources.INPUT_VALIDATION_FAILED');
                    }
                },
                delete: function($event){
                    $event.preventDefault();

                    if (confirm('Are you sure ?')) {
                        jsonService.delete(
                            @ViewBag.ID,
                            function (data) {
                                jsHelper.processMessage(data.message);
                                if(data.message.type == 0) {
                                    window.location = '@Url.Action("Index", "AVFSupplier")';
                                }
                            },
                                function (error) {
                                    jsHelper.showMessage('warning', error);
                                }
                            );
                    }
                },
                viewInvoiceDetail: function (item) {
                    $scope.currentInvoice = JSON.parse(JSON.stringify(item));
                    jQuery("#invoiceDetail").modal();
                    //console.log($scope.currentInvoice);
                }
            };

            //
            // method
            //
            $scope.method = {
                refresh: function(id){
                    jsHelper.loadingSwitch(true);
                    window.location = '@Url.Action("Edit", "AVFSupplier", new { id = UrlParameter.Optional })/'+id;
                },
                getTotal: function () {
                    var result = 0;
                    if ($scope.data != null) {
                        angular.forEach($scope.data.avfSupplierPurchasingInvoices, function (value, key) {
                            result += parseFloat(value.totalAmount);
                        }, null);
                    }
                    return result;
                }
            };

            //
            // init
            //
            $scope.event.init();
        }]);
    </script>
}

