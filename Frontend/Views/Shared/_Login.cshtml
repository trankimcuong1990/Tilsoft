<!DOCTYPE html>
<html lang="en-us" id="extr-page">
@Html.Partial("~/Views/Shared/_Login/_Head.cshtml")
<body class="animated fadeInDown" ng-app="tilsoftApp" ng-controller="tilsoftController">
    @Html.Partial("~/Views/Shared/_Login/_Header.cshtml")

    <div id="main" role="main">
        <div id="content" class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/templatejs/login")

    <script type="text/javascript">
        //runAllForms();

        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                    password: {
                        required: true,
                        minlength: 3,
                        maxlength: 20
                    }
                },

                // Messages for form validation
                messages: {
                    email: {
                        required: 'Please enter your email address',
                        email: 'Please enter a VALID email address'
                    },
                    password: {
                        required: 'Please enter your password'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>

    <div id="loading-mask" style="display:none">
        <p class="loader" id="loading_mask_loader">
            <img src="~/TemplateResource/img/ajax-loader-tr.gif" alt="Loading..." />
            <br />Please wait...
        </p>
        &nbsp;
    </div>
    @RenderSection("pagejs", required: false)
</body>
</html>
