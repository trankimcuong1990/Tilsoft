<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>Adding work-order item</h2>
        </header>
        <div>
            <div class="widget-body">
                <div class="smart-form">
                    <div class="row">
                        <section class="col col-lg-12">
                            <a class="btn btn-primary btn-xs m-bottom-15" ng-click="addPlanningProductionTeamForm.add()">Add</a>
                            <a class="btn btn-warning btn-xs m-bottom-15" ng-click="addPlanningProductionTeamForm.cancel()">Cancel</a>
                            <div avs-scroll grid-handler="gridHandler_AddItem" class="tilsoft-table-wrapper">
                                <div class="tilsoft-table">
                                    <div class="tilsoft-table-header" style="width:1200px">
                                        <div style="width:40px"></div>
                                        <div style="width:120px">WorkOrder</div>
                                        <div style="width:60px">Client</div>
                                        <div style="width:400px">Product</div>
                                        <div style="width:150px">Team</div>
                                        <div>Product Item</div>
                                    </div>
                                    <div class="tilsoft-table-body" style="margin-top:0px;width:1200px;height:auto">
                                        <table>
                                            <tbody ng-repeat="pItem in addPlanningProductionTeamForm.data">
                                                <tr>
                                                    <td style="width:40px; text-align:right">
                                                        <label class="checkbox">
                                                            <input type="checkbox" ng-model="pItem.isSelected">
                                                            <i></i>
                                                        </label>
                                                    </td>
                                                    <td style="width:120px;">
                                                        {{pItem.rowIndex==1?pItem.workOrderUD :""}}
                                                    </td>
                                                    <td style="width:60px;">
                                                        {{pItem.rowIndex==1?pItem.clientUD :""}}
                                                    </td>
                                                    <td style="width:400px;">
                                                        {{pItem.rowIndex==1?pItem.productUD :""}}
                                                        <br />
                                                        {{pItem.rowIndex==1?pItem.productNM :""}}
                                                    </td>

                                                    <td style="width:150px;">
                                                        {{pItem.rowIndex==1?pItem.productionTeamNM :""}}
                                                    </td>
                                                    <td>
                                                        {{pItem.productionItemUD}}
                                                        <br />
                                                        {{pItem.productionItemNM}}
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>