            </div>
            <div class="modal-body smart-form">
                <fieldset>
                    <div class="row">
                        <section class="col col-10">
                            <div class="input-group">
                                <input id="quickSearchBox-client" placeholder="press enter to search all client or type at least 3 chars to search client" class="form-control" type="text" ng-keyup="quicksearchClient.event.searchBoxKeyUp($event)" autocomplete="off" ng-model="client.clientNM">
