@{
    ViewBag.Title = "Search Client Payment";
    ViewBag.Module = "Client Payment";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Filters</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div class="smart-form">
                        <fieldset>
                            <div class="row">
                                <section class="col col-2">
                                    <label class="label">Payment No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ClientPaymentUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Method</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.ClientPaymentMethodID" ng-options="method.clientPaymentMethodID as method.clientPaymentMethodNM for method in methods">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Client</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ClientUD" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">P/I No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ProformaInvoiceNo" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">C/I No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.InvoiceNo" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Transaction No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.TransactionNo" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">LC No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.LCNo" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Remark</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.Remark" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Currency</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.Currency">
                                            <option value=""></option>
                                            <option value="USD">USD</option>
                                            <option value="EUR">EUR</option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Ballance No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ClientPaymentBallanceNo" />
                                    </label>
                                </section>
                                <section class="col col-2">
                                    <label class="label">Confirmed</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.IsConfirmed" ng-options="yesno.yesNoValue as yesno.yesNoText for yesno in yesNos">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div id="searchResult" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1450px;">
                                <div style="width: 100px;"></div>
                                <div style="width: 50px">Conf</div>
                                <div style="width: 120px;">Method</div>
                                <div style="width: 80px">Receipt No</div>
                                <div style="width: 80px">Balance No</div>
                                <div style="width: 200px" class="sorting" data-colname="ClientNM">Client</div>
                                <div style="width: 120px;" class="sorting" data-colname="TransactionNo">Transaction No</div>
                                <div style="width: 120px;" class="sorting" data-colname="LCNo">LC No</div>
                                <div style="width: 80px;" class="sorting" data-colname="PaymentDate">Payment Date</div>
                                <div style="width: 120px;" data-colname="Amount">Amount</div>
                                <div style="width: 120px;">Remark</div>
                                <div>Tracking</div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1450px;">
                                <table>
                                    <tr ng-repeat="model in data">
                                        <td style="text-align: center; width: 100px;">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a class="btn btn-primary btn-xs font-11" target="_blank" href="@Url.Action("Edit", "ClientPaymentMng")/{{model.clientPaymentID}}?clientId=0&c=1&lc=false" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary btn-xs font-11" target="_blank" href="@Url.Action("Edit", "ClientPaymentMng")/{{model.clientPaymentID}}?clientId=0&c=1&lc=false" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                            }
                                            <a class="btn btn-danger btn-xs font-11" href="javascript:void(0)" title="Delete" ng-click="event.delete(model.clientPaymentID)" @Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) ng-disabled="model.isConfirmed"><i class="fa fa-times"></i> Del</a>
                                        </td>
                                        <td style="width: 50px; text-align: center;"><input type="checkbox" disabled ng-model="model.isConfirmed" /></td>
                                        <td style="width: 120px; text-align: center;">{{model.clientPaymentMethodNM}}</td>
                                        <td style="width: 80px; text-align: center;">{{model.clientPaymentUD}}</td>
                                        <td style="width: 80px; text-align: center;">{{model.clientPaymentBallanceUD}}</td>
                                        <td style="width: 200px;text-align: left;">{{model.clientNM}} ({{model.clientUD}})</td>
                                        <td style="width: 120px;text-align: center;">{{model.transactionNo}}</td>
                                        <td style="width: 120px;text-align: center;">{{model.lcNo}}</td>
                                        <td style="width: 80px;text-align: center;">{{model.paymentDate}}</td>
                                        <td style="width: 120px;text-align: right;"><span ng-if="model.currency == 'USD'">$</span><span ng-if="model.currency == 'EUR'">&euro;</span>{{model.amount | currency:'':2}}</td>
                                        <td style="width: 120px;">{{model.remark}}</td>
                                        <td>
                                            <div class="note">
                                                <strong>Updated by</strong>: 
                                                <a ng-show="(model.updatedBy!=null && model.updatorName2!=null)" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.updatedBy}}" da data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                    <i class="fa fa-user"></i> {{model.updatorName2}}
                                                </a>
                                                <span ng-show="(model.updatedBy!=null && model.updatorName2==null && model.updatorName!=null)">{{model.updatorName}}</span> 
                                                on 
                                                {{model.updatedDate}}
                                            </div>
                                            <div class="note" ng-if="model.confirmerName">
                                                <strong>Confirmed by</strong>: 
                                                <a ng-show="(model.confirmedBy!=null && model.confirmerName2!=null)" href="@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/{{model.confirmedBy}}" da data-featherlight="iframe" data-featherlight-iframe-allowfullscreen="true" data-featherlight-iframe-width="800" data-featherlight-iframe-height="600">
                                                    <i class="fa fa-user"></i> {{model.confirmerName2}}
                                                </a>
                                                <span ng-show="(model.confirmedBy!=null && model.confirmerName2==null && model.confirmerName!=null)">{{model.confirmerName}}</span> 
                                                on 
                                                {{model.confirmedDate}}
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Init", "ClientPaymentMng")" target="_blank" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Print"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/clientpayment/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        jsonService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
    </script>
    <script src="~/Angular/app/clientPaymentMng/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/clientPaymentMng/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
