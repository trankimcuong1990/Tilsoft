@{
    ViewBag.Title = "New Payment";
    ViewBag.Module = "New Payment";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Fill in the option(s) below to create new payment</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <form name="initForm" class="smart-form">
                        <fieldset>
                            <section class="col col-6">
                                <label class="label">Client <span class="note-error" ng-show="initForm.clientid.$error.required"> - Required</span></label>
                                <label class="select">
                                    <select name="clientid" ui-select2 ng-model="selection.clientID" style="width:100%" class="select2" required>
                                        <option value="">--NULL--</option>
                                        <option ng-repeat="client in clients" value="{{client.clientID}}">{{client.clientUD}} - {{client.clientNM}}</option>
                                    </select>
                                </label>
                            </section>
                            <section class="col col-3">
                                <label class="label">Currency <span class="note-error" ng-show="initForm.currency.$error.required"> - Required</span></label>
                                <label class="select">
                                    <select name="currency" ng-model="selection.currency" required>
                                        <option value=""></option>
                                        <option value="USD">USD</option>
                                        <option value="EUR">EUR</option>
                                    </select>
                                    <i></i>
                                </label>
                            </section>
                            <section class="col col-3">
                                <label class="label">Method <span class="note-error" ng-show="initForm.method.$error.required"> - Required</span></label>
                                <label class="select">
                                    <select name="method" class="form-control search-filter" ng-model="selection.clientPaymentMethodID" ng-options="method.clientPaymentMethodID as method.clientPaymentMethodNM for method in methods" required>
                                        <option value=""></option>
                                    </select>
                                    <i></i>
                                </label>
                            </section>
                        </fieldset>
                        <footer>
                            <a href="javascript:void(0)" class="btn btn-primary" ng-click="event.next()">Next &raquo;</a>
                            <a href="@Url.Action("Index", "ClientPaymentMng")" class="btn btn-default">&laquo; Back</a>
                        </footer>
                    </form>
                </div>
            </div>
        </div>
    </article>
</div>

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/clientPayment/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        var context = {
            nextUrl: '@Url.Action("Edit", "ClientPaymentMng")/0'
        }
    </script>
    <script src="~/Angular/app/clientPaymentMng/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/clientPaymentMng/init.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
