<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="_OfferSeasonDetailController">
    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>Search OfferLine Item</h2>
        </header>
        <div>
            <div class="widget-body-toolbar">
                <a class="btn btn-warning btn-sm" href="#/"><i class="fa fa-times"></i> Cancel</a>
                <a class="btn btn-primary btn-sm" href="javascript:void(0)" ng-click="event.reload()"><i class="fa fa-search"></i> Search Offer Line</a>
                <a class="btn btn-success btn-sm" href="#/" ng-click="event.ok()"><i class="fa fa-check"></i> OK</a>
            </div>
            <div class="widget-body">
                <div class="smart-form">
                    <div class="row">
                        <section class="col col-lg-12">                           
                                <div class="tilsoft-table-wrapper" avs-scroll grid-handler="gridHandler">
                                    <div class="tilsoft-table" >
                                        <div class="tilsoft-table-header" style="width: 1350px;">
                                            <div style="width: 80px;">
                                                <label class="checkbox">
                                                    <input type="checkbox"
                                                           ng-model="isAllSelected"
                                                           ng-click="event.selectAll()">
                                                    <i style="top:8px; left:17px"></i>
                                                </label>
                                            </div>
                                            <div style="width:100px">Image</div>
                                            <div style="width:200px">ArticleCode</div>
                                            <div style="width:400px;">Description</div>
                                            <div style="width:100px;">SalePrice</div>
                                            <div>Remark</div>
                                        </div>

                                        <div class="tilsoft-table-filter" style="width: 1350px;">
                                            <div style="text-align: center; width: 80px; vertical-align:middle">
                                                <a href="javascript:void(0)" class="btn btn-{{isDefaultFilter?'default':'primary'}} btn-xs" title="Apply Filter" ng-click="event.reload()"><i class="fa fa-filter"></i></a>
                                                <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="event.clearFilter()"><i class="fa fa-ban"></i></a>
                                            </div>
                                            <div style="width:100px"></div>
                                            <div style="width: 200px; text-align: center"><input type="text" ng-model="filters.articleCode" class="search-filter" /></div>
                                            <div style="width: 400px; text-align: center"><input type="text" ng-model="filters.description" class="search-filter" /></div>
                                            <div style="width: 100px"></div>
                                            <div></div>
                                        </div>

                                        <div class="tilsoft-table-body" style="width: 1350px; height: auto; margin-top: 95px;">
                                            <table id="table-sort">
                                                <tbody ng-repeat="item in searchResult">
                                                    <tr>
                                                        <td style="width:79px;text-align:center;vertical-align:top">
                                                            <label class="checkbox">
                                                                <input type="checkbox" ng-model="item.isSelected">
                                                                <i style="top:0px; left:20px"></i>
                                                            </label>
                                                        </td>
                                                        <td style="width:100px;text-align: center;">
                                                            <a href="{{item.productFileLocation}}" data-featherlight="image">
                                                                <img style="width: 95%;" ng-src="{{item.productThumbnailLocation}}" />
                                                            </a>
                                                        </td>
                                                        <td style="width:200px"> {{item.articleCode}} </td>
                                                        <td style="width:400px"> {{item.description}} </td>
                                                        <td style="width:100px"> {{item.salePrice | number:2}} </td>
                                                        <td> {{item.remark}} </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>