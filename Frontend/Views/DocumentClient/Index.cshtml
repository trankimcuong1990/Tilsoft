@section pagejs {
    <script src="~/Angular/app/documentclient/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jQuery('.search-filter').keypress(function(e){
            if (e.keyCode == 13) {
                var scope = angular.element(jQuery('body')).scope();
                scope.reload();
            }
        });

        documentClientService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/documentclient/';
        documentClientService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        documentClientService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];

        var documentClientApp = angular.module('tilsoftApp', ['ngCookies', 'avs-directives']);
        documentClientApp.controller('tilsoftController', ['$scope', '$cookieStore', function ($scope, $cookieStore) {
            $scope.documentclients = [];
            $scope.data = [];
            $scope.pageIndex = 1;
            $scope.totalPage = 0;
            $scope.totalRows = 0;

            $scope.filters = {
                ContainerNo : '',
                BLNo : '',
                DeliveryStatusID : 0,
                ClientUD : '',
                ClientNM : '',
                ProformaInvoiceNo : '',
                InvoiceNo : '',
                Season : '@Frontend.Helper.Common.GetCurrentSeason()',
                ETA : '',
                ETA2 : '',
            };

            $scope.defaultFilter = angular.copy($scope.filters);
            $scope.isDefaultFilter = true;

            var cookieId = '@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()';
            var cookieValue = $cookieStore.get(cookieId);
            if (cookieValue) {
                $scope.filters = cookieValue;
            }

            $scope.gridHandler = {
                loadMore: function () {
                    if ($scope.pageIndex < $scope.totalPage) {
                        $scope.pageIndex++;
                        documentClientService.searchFilter.pageIndex = $scope.pageIndex;
                        $scope.search(true);
                    }
                },
                sort: function (sortedBy, sortedDirection) {
                    $scope.data = [];
                    documentClientService.searchFilter.sortedDirection = sortedDirection;
                    documentClientService.searchFilter.pageIndex = $scope.pageIndex = 1;
                    documentClientService.searchFilter.sortedBy = sortedBy;
                    $scope.search();
                },
                isTriggered: false
            };

            $scope.search = function (isLoadMore) {
                $cookieStore.put(cookieId, $scope.filters);
                $scope.isDefaultFilter = angular.equals($scope.filters, $scope.defaultFilter);
                $scope.gridHandler.isTriggered = false;

                documentClientService.searchFilter.filters = $scope.filters;
                documentClientService.search(
                    function (data) {
                        $scope.documentclients = data.data;
                        Array.prototype.push.apply($scope.data, data.data.documentClientSearchResults);
                        $scope.totalPage = Math.ceil(data.totalRows / documentClientService.searchFilter.pageSize);
                        $scope.totalRows = data.totalRows;

                        $scope.$apply();
                        $('#content').show();

                        if (!isLoadMore) {
                            $scope.gridHandler.goTop();
                        }
                        $scope.gridHandler.isTriggered = true;
                    },
                    function (error) {
                        jsHelper.showMessage('warning', error);
                    });
            };

            $scope.reload = function() {
                $scope.data = [];
                $scope.pageIndex = 1;

                documentClientService.searchFilter.pageIndex = 1;
                documentClientService.searchFilter.sortedBy = 'Season';
                documentClientService.searchFilter.sortedDirection = 'ASC';

                $scope.search();
            };

            $scope.quickupdate = function ($event) {
                //$scope.documentclients.documentClientSearchResults.forEach(function (item) {
                //    item.dateEmailToClient = item.dateEmailToClientFormated;
                //    item.dateSendToClient = item.dateSendToClientFormated;
                //    item.dateContainerDelivery = item.dateContainerDeliveryFormated;
                //});
                $event.preventDefault();
                //if ($scope.editForm.$valid) {
                    documentClientService.quickupdate(
                        $scope.documentclients.documentClientSearchResults,
                        function (data) {
                            jsHelper.processMessage(data.message);
                            if (data.message.type == 0) {
                                
                            }
                        },
                        function (error) {
                            jsHelper.showMessage('warning', error);
                        }
                    );
                //}
                @*else {
                    jsHelper.showMessage('warning', '@Frontend.Properties.Resources.INPUT_VALIDATION_FAILED');
                }*@
            };

            $scope.editStatus = function (item) {
                item.isEdit = 1;
            };

            $scope.clear = function () {
                $scope.filters = {
                    ContainerNo : '',
                    BLNo : '',
                    DeliveryStatusID : 0,
                    ClientUD : '',
                    ClientNM : '',
                    ProformaInvoiceNo : '',
                    InvoiceNo : '',
                    Season : '@Frontend.Helper.Common.GetCurrentSeason()',
                    ETA : '',
                    ETA2 : '',
                };

                $scope.reload();
            };

            $scope.delete = function (id) {
                if (confirm('Are you sure ?')) {
                    documentClientService.delete(id,
                        function (data) {
                            jsHelper.processMessage(data.message);

                            if(data.message.type == 0) {
                                var j = -1;
                                for (var i = 0; i < $scope.documentclients.length; i++) {
                                    if ($scope.documentclients[i].documentClientID == data.data) {
                                        j = i;
                                        break;
                                    }
                                }

                                if (j >= 0) {
                                    $scope.documentclients.splice(j, 1);
                                }

                                $scope.$apply();
                            }
                        },
                        function (error) {
                            jsHelper.showMessage('warning', error);
                        }
                    );
                }
            };

            $scope.printReport = function ($event) {
                $event.preventDefault();
                documentClientService.printReport($scope.printFilter.season,
                    function (data) {
                        jsHelper.processMessage(data.message);
                        if (data.message.type !=2)
                        {
                            window.open('@System.Configuration.ConfigurationManager.AppSettings["BackendReportUrl"]' + data.data + ".xlsm");
                        }
                    },
                    function (error) {
                        jsHelper.showMessage('warning', error);
                    }
                );
            };

            $scope.print = function ($event) {
                $event.preventDefault();
                $('#frmPrintOption').modal('show');
            };

            $scope.search();
        }]);
    </script>
}
