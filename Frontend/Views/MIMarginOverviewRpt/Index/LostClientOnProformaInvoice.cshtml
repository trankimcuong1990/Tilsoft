<div>
    <div class="tilsoft-table">
        <div class="tilsoft-table-body">
            <table>
                <tbody>
                    <tr>
                        <th colspan="4"></th>
                        <th colspan="3" class="mi-background-last-season">PROFORMA INVOICE (PF)</th>
                        <th colspan="3" class="mi-margin-last-season">&Delta; ALTER ALL</th>
                    </tr>
                    <tr>
                        <th style="font-weight: bold; width: 35px;">#<br />{{lostClientOnProformaInvoiceResult.length}}</th>
                        <th style="font-weight: bold;">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'clientNM')">
                                CLIENT NAME
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-clientNM'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'clientNM'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 40px;">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'clientCountryUD')">
                                COU N TRY
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-clientCountryUD'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'clientCountryUD'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 50px;">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'saleUD')">
                                AC C
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-saleUD'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'saleUD'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        @*commerial invoice*@

                        <th style="font-weight: bold; width: 60px;" class="mi-background-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'piCont')">
                                CONT
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-piCont'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'piCont'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 100px;" class="mi-background-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'piAmountInEUR')">
                                TOTAL AMOUNT (EUR)
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-piAmountInEUR'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'piAmountInEUR'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 50px;" class="mi-background-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'piAmountInEUR')">
                                %&nbsp;&nbsp;&nbsp;&nbsp;
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-piAmountInEUR'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'piAmountInEUR'" class="fa fa-caret-up"></span>
                            </a>
                        </th>

                        @*margin*@
                        <th style="font-weight: bold; width: 100px;" class="mi-margin-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'deltaAfterAllInEUR')">
                                &Delta;
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-deltaAfterAllInEUR'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'deltaAfterAllInEUR'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 50px;" class="mi-margin-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'deltaAfterAllInEUR')">
                                % of 100%
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-deltaAfterAllInEUR'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'deltaAfterAllInEUR'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                        <th style="font-weight: bold; width: 50px;" class="mi-margin-last-season">
                            <a href="javascript:void(0)" ng-click="method.sortData('LostClientOnProformaInvoice', 'deltaAfterAllPercent')">
                                %&Delta;
                                <span ng-show="sortValue.LostClientOnProformaInvoice === '-deltaAfterAllPercent'" class="fa fa-caret-down"></span>
                                <span ng-show="sortValue.LostClientOnProformaInvoice === 'deltaAfterAllPercent'" class="fa fa-caret-up"></span>
                            </a>
                        </th>
                    </tr>

                    <tr>
                        <th></th>
                        <th>A</th>
                        <th>B</th>
                        <th>C</th>

                        <th class="mi-background-last-season">D</th>
                        <th class="mi-background-last-season">E</th>
                        <th class="mi-background-last-season">F</th>

                        <th class="mi-margin-last-season">G</th>
                        <th class="mi-margin-last-season">H</th>
                        <th class="mi-margin-last-season">I</th>
                    </tr>

                    <tr>
                        <td colspan="4" style="font-weight: bold;">TOTAL ({{lostClientOnProformaInvoiceResult.length}} clients)</td>

                        <td style="text-align:right; font-weight:bold" class="mi-background-last-season">{{lostClientOnProformaInvoiceResult| sumFunc:'piCont' | number : 1}}</td>
                        <td style="text-align:right; font-weight:bold" class="mi-background-last-season">{{lostClientOnProformaInvoiceResult| sumFunc:'piAmountInEUR' | currency : '&euro;' : 0}}</td>
                        <td style="font-weight: bold;text-align: right;" class="mi-background-last-season">100%</td>

                        <td style="text-align:right; font-weight:bold;" class="mi-margin-last-season">{{lostClientOnProformaInvoiceResult| sumFunc:'deltaAfterAllInEUR' | currency:'&euro;':0}}</td>
                        <td style="text-align:right; font-weight:bold;" class="mi-margin-last-season">100%</td>
                        <td style="text-align:right; font-weight:bold;" class="mi-margin-last-season">{{(lostClientOnProformaInvoiceResult| sumFunc:'deltaAfterAllInEUR') * 100 / (lostClientOnProformaInvoiceResult| sumFunc:'purchasingAmountInEUR') | number:0}}%</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="text" ng-model="filter.LostClientOnProformaInvoice.clientNM" class="form-control" style="height:80%" /></td>
                        <td><input type="text" ng-model="filter.LostClientOnProformaInvoice.clientCountryUD" class="form-control" style="height:80%" /></td>
                        <td><input type="text" ng-model="filter.LostClientOnProformaInvoice.saleUD" class="form-control" style="height:80%" /></td>
                        <td colspan="5"></td>
                    </tr>
                    <tr ng-repeat="item in lostClientOnProformaInvoiceResult = (LostClientOnProformaInvoice | orderBy : sortValue.LostClientOnProformaInvoice | filter : {clientNM : filter.LostClientOnProformaInvoice.clientNM, clientCountryUD : filter.LostClientOnProformaInvoice.clientCountryUD, saleUD : filter.LostClientOnProformaInvoice.saleUD})">
                        <td style="text-align: right;">{{$index+1}}</td>
                        <td>{{item.clientNM}}</td>
                        <td style="text-align: center">{{item.clientCountryUD}}</td>
                        <td style="text-align: center">{{item.saleUD}}</td>

                        <td style="text-align: right;" class="mi-background-last-season">{{item.piCont | currency:'':1}}</td>
                        <td style="text-align: right;" class="mi-background-last-season">{{item.piAmountInEUR | currency:'&euro;':0}}</td>
                        <td style="text-align: right;" class="mi-background-last-season">{{item.piAmountInEUR/(LostClientOnProformaInvoice | sumFunc:'piAmountInEUR') * 100 | number : 1}}%</td>

                        <td style="text-align: right;" class="mi-margin-last-season">{{item.deltaAfterAllInEUR | currency:'&euro;':0}}</td>
                        <td style="text-align: right;" class="mi-margin-last-season">{{(item.deltaAfterAllInEUR/(LostClientOnProformaInvoice | sumFunc:'deltaAfterAllInEUR')) * 100 | number:1}}%</td>
                        <td style="text-align: right;" class="mi-margin-last-season">{{item.deltaAfterAllPercent | number:1}}%</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>