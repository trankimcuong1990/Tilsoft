@{
    var guid = Guid.NewGuid().ToString().Replace("-", "");
    var token = Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION];
    var serviceRoot = System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"];
    var pageSize = System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
    var cookieID = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var backendReportUrl = @System.Configuration.ConfigurationManager.AppSettings["BackendReportUrl"];


    ViewBag.Title = "Development Items";
    ViewBag.Module = "Development Items";
    ViewBag.Icon = "fa-bar-chart-o";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    <div avs-scroll grid-handler="gridHandler" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 2540px;">
                                <div style="width: 120px; font-weight: bold;">Found {{totalRows}} <font style="color: #a90329; text-transform: none;">row(s)</font></div>
                                <div style="width: 80px;">Season</div>
                                <div style="width: 80px;">Client Code</div>
                                <div style="width: 120px;">Code</div>
                                <div style="width: 100px;">Status</div>
                                <div style="width: 250px;">Description</div>
                                <div style="width: 40px;">Qnt</div>
                                <div style="width: 120px;">Factory</div>
                                <div style="width: 120px;">Material Name</div>
                                <div style="width: 120px;">Material Type Name</div>
                                <div style="width: 120px;">Material Color Name</div>
                                <div style="width: 120px;">Material 2 Name</div>
                                <div style="width: 120px;">Material 2 Type Name</div>
                                <div style="width: 120px;">Material 2 Color Name</div>
                                <div style="width: 120px;">Material 3 Name</div>
                                <div style="width: 120px;">Material 3 Type Name</div>
                                <div style="width: 140px;">Seat Cushion Name</div>
                                <div style="width: 125px;">Back Cushion Name</div>
                                <div style="width: 120px;">Cushion Color Name</div>
                                <div style="width: 150px;">Seat Cushion Specification </div>
                                <div>Back Cushion Specification</div>
                            </div>
                            <div class="tilsoft-table-filter" style="width: 2540px;">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc">
                                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Apply Filter" ng-click="event.refresh()"><i class="fa fa-filter"></i></a>
                                                    <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="event.clear()"><i class="fa fa-ban"></i></a>
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 80px; border-right: 1px solid #ccc">
                                                    <select class="form-control search-filter" style="width:100%" ng-model="filters.Season" ng-options="season.seasonValue as season.seasonText for season in seasons">
                                                        <option value=""></option>
                                                    </select>
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 80px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.ClientUD" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"></div>
                                            </th>
                                            <th>
                                                <div style="width:100px; border-right: 1px solid #ccc">
                                                    <select class="form-control search-filter" style="width:100%" ng-model="filters.SampleProductStatusID" ng-options="status.sampleProductStatusID as status.sampleProductStatusNM for status in sampleProductStatuses">
                                                        <option value=""></option>
                                                    </select>
                                                </div>
                                            </th>
                                            <th>
                                                <div style="width: 250px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.ArticleDescription" /></div>
                                            </th>

                                            <th>
                                                <div style="width: 40px; border-right: 1px solid #ccc"></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.VNSuggestedFactoryUD" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.MaterialDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.MaterialTypeDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.MaterialColorDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.Material2Description" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.Material2TypeDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.Material2ColorDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.Material3Description" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.Material3TypeDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 140px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.SeatCushionDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 125px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.BackCushionDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 120px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.CushionColorDescription" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 150px; border-right: 1px solid #ccc"><input class="form-control search-filter" type="text" ng-model="filters.SeatCushionSpecification" /></div>
                                            </th>
                                            <th>
                                                <div style="width: 100%;"><input type="text" class="form-control search-filter" ng-model="filters.BackCushionSpecification" /></div>
                                            </th>

                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <div class="tilsoft-table-body" style="width: 2540px;">
                                <table>
                                    <tbody>
                                        <tr ng-repeat="item in data">
                                            <td style="width: 119px; text-align: center; vertical-align: middle">
                                                <a href="{{item.finishedImageFileLocation}}" data-featherlight="image">
                                                    <img style="width: 95%;" ng-src="{{item.finishedImageThumbnailLocation}}" />
                                                </a>
                                            </td>
                                            <td style="width:80px; text-align:center">{{item.season}}</td>
                                            <td style="width: 80px; text-align: center;">{{item.clientUD}}</td>
                                            <td style="width: 120px;">
                                                <a href="@Url.Action("Edit","Sample2Mng")/{{item.sampleOrderID}}" target="_blank">
                                                    {{item.sampleProductUD}}
                                                </a>
                                            </td>
                                            <td style="text-align:center; width:100px">{{item.sampleProductStatusNM}}</td>
                                            <td style="width: 250px; text-align:left;">{{item.articleDescription}}</td>
                                            <td style="width: 40px; text-align:right;">{{item.quantity}}</td>
                                            <td style="width: 120px; text-align:center;">{{item.vnSuggestedFactoryUD}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.materialDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.materialTypeDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.materialColorDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.material2Description}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.material2TypeDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.material2ColorDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.material3Description}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.material3TypeDescription}}</td>
                                            <td style="width: 140px; text-align:left;">{{item.seatCushionDescription}}</td>
                                            <td style="width: 125px; text-align:left;">{{item.backCushionDescription}}</td>
                                            <td style="width: 120px; text-align:left;">{{item.cushionColorDescription}}</td>
                                            <td style="width: 150px; text-align:left;">{{item.seatCushionSpecification}}</td>
                                            <td>{{item.backCushionSpecification}}</td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>


@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.refresh()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.clear()"><i class="fa fa-refresh"></i></a>
        </li>
