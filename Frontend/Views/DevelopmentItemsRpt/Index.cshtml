                <a href="javascript:void(0);" class="btn btn-default" title="Export Excel" style="color: #31B404" ng-click="event.exportExcel()"><i class="fa fa-file-excel-o"></i></a>
            </li>*@
    </ul>
}


@section pagejs {
    <script type="text/javascript">
    var context = {
        serviceUrl: '@(serviceRoot)/api/developmentitemsrpt/',
        token: '@token',
        pageSize: '@pageSize',
        cookieID: '@cookieID',
        backendReportUrl: '@backendReportUrl',
    }
    </script>
    <script type="text/javascript" src="~/Views/DevelopmentItemsRpt/index.js?v=@guid"></script>
    <script type="text/javascript" src="~/Angular/app/jsonService2.js?v=@guid"></script>
    <script type="text/javascript" src="~/Views/DevelopmentItemsRpt/service.js?v=@guid"></script>

}
