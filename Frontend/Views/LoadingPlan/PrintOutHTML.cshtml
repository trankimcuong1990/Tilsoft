        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td style="color:#a9a9a9">CONTAINER LOADING RECORD</td>
            </tr>
        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td style="height:150px; width:30%; border:1px solid; text-align:center">
                    <img style="font-display:block;" height="150" width="150" src="@data.ContainerDoorAndLockImage" align="middle" />
                    <br />
                    <span style="font-size:8px; vertical-align:bottom; text-align:left">Container doors and lock</span>
                </td>
                <td style="height:150px; width:30%; border:1px solid; text-align:center">
                    <img style="font-display:block;" height="150" width="150" src="@data.ContainerSealImage" align="middle" />
                    <br />
                    <span style="font-size:8px; vertical-align:bottom; text-align:left">Container seal</span>
                </td>
                <td style="height:150px; width:30%; border:1px solid; text-align:center">
                    <img style="font-display:block;" height="150" width="150" src="@data.DryPackImage" align="middle" />
                    <br />
                    <span style="font-size:8px; vertical-align:bottom; text-align:left">Snapshot on dry-packs</span>
                </td>
            </tr>
        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td style="color:#a9a9a9">APPROVED LOADING PLAN</td>
            </tr>
        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td style="height:150px; border:1px solid; text-align:center">
                    <img style="font-display:block;" height="150" width="150" src="@data.ApprovedImage" align="middle" />
                </td>
            </tr>
        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td style="color:#a9a9a9">PACKING LIST</td>
            </tr>
        </table>
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px; border:1px solid; border-collapse: collapse;" align="center">
            <tr style="border: 1px solid">
                <th style="border: 1px solid">Order number</th>
                <th style="border: 1px solid">Name client</th>
                <th style="border: 1px solid">Factory</th>
                <th style="border: 1px solid">Article code</th>
                <th style="border: 1px solid">Description of goods</th>
                <th style="border: 1px solid">Quantity</th>
                <th style="border: 1px solid">QNT/40HC</th>
            </tr>
            @foreach (Frontend.Models.ReportDTO.LoadingPlanDetailReportDTO dtoDetail in data.loadingPlanDetailReportDTOs)
            {
                totalQnt += dtoDetail.Quantity != null? dtoDetail.Quantity: 0;
                totalQnt40 += dtoDetail.QntIn40HC != null? dtoDetail.QntIn40HC: 0 ;
                <tr style="border: 1px solid">
                    <td style="border: 1px solid">@dtoDetail.ProformaInvoiceNo</td>
                    <td style="border: 1px solid">@dtoDetail.ClientUD</td>
                    <td style="border: 1px solid">@dtoDetail.FactoryUD</td>
                    <td style="border: 1px solid">@dtoDetail.ArticleCode</td>
                    <td style="border: 1px solid">@dtoDetail.Description</td>
                    <td style="border: 1px solid">@dtoDetail.Quantity</td>
                    <td style="border: 1px solid">@dtoDetail.QntIn40HC</td>
                </tr>
            }
            <tr style="border: 1px solid">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style="border: 1px solid; text-align:center; font-weight:bold">Total</td>
                <td style="border: 1px solid; font-weight:bold">@totalQnt</td>
                <td style="border: 1px solid; font-weight:bold">@totalQnt40</td>
            </tr>
        </table>
    </body>

    <script type="text/javascript">
    (function check() {
        if (@data.Cont20DC == 1) {
            document.getElementById("myCheckA").checked = true;
        }
        if (@data.Cont40DC == 1) {
            document.getElementById("myCheckB").checked = true;
        }
        if (@data.Cont40HC == 1) {
            document.getElementById("myCheckC").checked = true;
        }
    }());
    </script>