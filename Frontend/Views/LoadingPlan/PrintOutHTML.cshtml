@{ 
    Layout = "~/Views/Shared/_Print.cshtml";
    Frontend.Models.ReportDTO.LoadingPlanReportDTO data = (Frontend.Models.ReportDTO.LoadingPlanReportDTO)ViewBag.Data;
    int? totalQnt = 0;
    decimal? totalQnt40 = 0;
}
    
<script type="text/javascript">
    function printMyPage() {
        //Get the print button
        var printButton = document.getElementById("myPrntbtn");
        //Hide the print button
        printButton.style.visibility = 'hidden';
        //Print the page content
        window.print()
        //Show back the print button on web page
        printButton.style.visibility = 'visible';
    }
</script>
<button onclick="printMyPage()" id="myPrntbtn" style="float:none; vertical-align:top">Print this page</button>
    <body style="font-family:'Times New Roman'; font-size:13px ">
        <table style="width:100%; max-width:1000px;" border="0" align="center">
            <tr>
                <td><img height="30" src="~/img/ReportLogo/logo-Eurofar.png" style="margin-left:0px" /></td>
                <td style="vertical-align:central;" width="38%">
                    <label style="font-size:24px; color:darkgray">Loading Container Report</label>
                </td>
                <td style="vertical-align:bottom;">
                    <label>Report No.</label>
                </td>
                <td style="vertical-align:bottom;">
                    <label>@data.ContainerRefNo</label>
                </td>
            </tr>
        </table>
        <hr style="width:100%; max-width:1000px" />
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
                <td>CONTAINER NUMBER: &nbsp;<span style="background-color:lavender; width:200px">@data.ContainerNo</span></td>
                <td>PORT OF LOADING: &nbsp;<span style="background-color:lavender; width:200px">@data.POLName</span></td>
                <td>LOADING DATE: &nbsp;<span style="background-color:lavender; width:200px">@data.LoadingDate</span></td>
            </tr>

            <tr>
                <td>SEAL NUMBER: &nbsp;<span style="background-color:lavender;">@data.SealNo</span></td>
                <td>PORT OF DISCHARGE: &nbsp;<span style="background-color:lavender; ">@data.PODName</span></td>
                <td>ETD: &nbsp;<span style="background-color:lavender;">@data.ETD</span></td>
            </tr>

            <tr>
                <td>FACTORY: &nbsp;<span style="background-color:lavender;">@data.FactoryUD</span></td>
                <td>LOADING PLAN NUMBER:&nbsp;<span style="background-color:lavender;">@data.LoadingPlanUD</span></td>
                <td>ETA: &nbsp;<span style="background-color:lavender;">@data.ETA</span></td>
            </tr>
        </table>
        <hr style="width:100%; max-width:1000px" />
        <table style="width:100%; max-width:1000px; padding:5px 0px 5px 0px" border="0" align="center">
            <tr>
