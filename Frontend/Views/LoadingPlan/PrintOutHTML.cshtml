                    <img style="font-display:block;" height="150" width="150" src="@data.ProductPicture2" align="middle" />
                    <br />
                    <span style="font-size:8px; vertical-align:bottom; text-align:left">PRODUCT PHOTOS 2</span>
                </td>
                <td style="height:150px; width:30%; text-align:center; vertical-align:top">
                    <span style="padding-bottom:10px">CONTAINER TYPE:</span>
                    <br />
                    <br />
                    <input type="checkbox" id="myCheckA"/> &nbsp;20DC
                    <br />
                    <br />
                    <input type="checkbox" id="myCheckB"/> &nbsp;40DC
                    <br />
                    <br />
                    <input type="checkbox" id="myCheckC"/> &nbsp;40HC
                    <br />
                    <br />
                    <input type="checkbox" id="" /> &nbsp;45HC
                </td>
