
@{
    ViewBag.Title = "Search Frame material Profile";
    ViewBag.Module = "Frame Material Profile";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Filters</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div class="smart-form">
                        <fieldset>
                            <div class="row">
                                <section class="col col-3">
                                    <label class="label">Code</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.FrameMaterialProfileUD" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Description</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.Description" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Material</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.FrameMaterialID" ng-options="frameMaterial.frameMaterialID as frameMaterial.frameMaterialNM for frameMaterial in frameMaterials">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Factory</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.Factory" ng-options="factory.factoryUD as factory.factoryUD for factory in factories">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div id="searchResult" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1000px;">
                                <div style="width: 100px;"></div>
                                <div style="width: 100px;">Image</div>
                                <div style="width: 60px; text-align: center;" class="sorting" data-colname="FrameMaterialProfileUD">Code</div>
                                <div style="width: 120px;" class="sorting" data-colname="Description">Description</div>
                                <div style="width: 120px;" class="sorting" data-colname="Specification">Specification (mm)</div>
                                <div style="width: 100px;" class="sorting" data-colname="Thickness">Thickness (mm)</div>
                                <div style="width: 80px" class="sorting" data-colname="FrameMaterial">Material</div>
                                <div class="sorting" data-colname="FactoryUD">Factory</div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1000px;">
                                <table>
                                    <tr ng-repeat="model in data">
                                        <td style="text-align: center; width: 99px;">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a href="@Url.Action("Edit", "FrameMaterialProfile")/{{model.frameMaterialProfileID}}" class="btn btn-primary btn-xs font-11" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Edit", "FrameMaterialProfile")/{{model.frameMaterialProfileID}}" class="btn btn-primary btn-xs font-11" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                            }

                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                            {
                                                <a href="javascript:void(0)" ng-click="event.delete(model.frameMaterialProfileID)" class="btn btn-danger btn-xs font-11" title="Delete"><i class="fa fa-times"></i> Del</a>
                                            }
                                        </td>
                                        <td style="width: 100px; text-align: center; vertical-align: middle;">
                                            <a href="{{model.imageFile_FullSizeUrl}}" data-featherlight="image">
                                                <img style="width: 95%;" ng-src="{{model.imageFile_DisplayUrl}}" />
                                            </a>
                                        </td>
                                        <td style="text-align: center; width: 60px;">{{model.frameMaterialProfileUD}}</td>
                                        <td style="width: 120px;">{{model.description}}</td>
                                        <td style="width: 120px;">{{model.specification}}</td>
                                        <td style="width: 100px;">{{model.thickness}}</td>
                                        <td style="width: 80px;">{{model.frameMaterialNM}}</td>
                                        <td>{{model.factory}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Edit", "FrameMaterialProfile")/0" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default disabled" title="Print"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Angular/app/jsonService.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/FrameMaterialProfile/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        jsonService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
    </script>
    <script src="~/Angular/app/frameMaterialProfile/service.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/frameMaterialProfile/index.js?cache=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
