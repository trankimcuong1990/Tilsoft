@{
    string season = Library.Helper.GetCurrentSeason();
    if (ViewData["season"] != null)
    {
        season = ViewData["season"].ToString();
    }
    string prevSeason = Library.Helper.GetPreviousSeason(season);
}


<div ng-controller="ExpectedController">

    <h2>EXPECTED BY CLIENT @season COMPARE TO COMMERCIAL INVOICE @prevSeason</h2>
    <div ng-show="miSaleByClientRpt.expectations">
        <div class="tilsoft-table">
            <div class="tilsoft-table-body" style="margin-top:0px">
                <table>
                    <tbody>
                        <tr>
                            <th colspan="4" style="font-weight:bold"></th>
                            <th colspan="3" style="font-weight:bold;background-color:#92d678">EXPECTED (EXP)<br />@season</th>
                            <th colspan="3" style="font-weight:bold;background-color:#a5a4f1">COMMERCIAL INVOICE (CI)<br />@prevSeason</th>                        
                            <th colspan="3" style="font-weight:bold" class="mi-margin-last-season">&Delta;6<br />@prevSeason</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th style="font-weight: bold; width: 35px;">#<br />{{miSaleByClientRpt.expectations.length}}</th>
                            <th style="font-weight: bold;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'clientNM')">
                                    CLIENT NAME
                                    <span ng-show="sortValue.ExpectedByClient === '-clientNM'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'clientNM'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 40px;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'clientCountryUD')">
                                    COUN TRY
                                    <span ng-show="sortValue.ExpectedByClient === '-clientCountryUD'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'clientCountryUD'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 50px;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'saleUD')">
                                    SALE ACC
                                    <span ng-show="sortValue.ExpectedByClient === '-saleUD'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'saleUD'" class="fa fa-caret-up"></span>
                                </a>
                            </th>

                            @*Expected This Year*@
                            <th style="font-weight: bold; width: 60px;background-color:#92d678;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'expectedContThisYear')">
                                    TOTAL CONT
                                    <span ng-show="sortValue.ExpectedByClient === '-expectedContThisYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'expectedContThisYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 100px;background-color:#92d678;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'expectedAmountInUSDThisYear')">
                                    TOTAL AMOUNT
                                    <span ng-show="sortValue.ExpectedByClient === '-expectedAmountInUSDThisYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'expectedAmountInUSDThisYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 50px;background-color:#92d678;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'expectedAmountInUSDThisYear')">
                                    %
                                    <span ng-show="sortValue.ExpectedByClient === '-expectedAmountInUSDThisYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'expectedAmountInUSDThisYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>

                            @*Commercial Invoice Last Year*@
                            <th style="font-weight: bold; width: 60px;background-color:#a5a4f1">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'ciContLastYear')">
                                    TOTAL CONT
                                    <span ng-show="sortValue.ExpectedByClient === '-ciContLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'ciContLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 100px;background-color:#a5a4f1">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'ciAmountInUSDLastYear')">
                                    TOTAL AMOUNT
                                    <span ng-show="sortValue.ExpectedByClient === '-ciAmountInUSDLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'ciAmountInUSDLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 50px;background-color:#a5a4f1">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'ciAmountInUSDLastYear')">
                                    %
                                    <span ng-show="sortValue.ExpectedByClient === '-ciAmountInUSDLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'ciAmountInUSDLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th> 

                            @*Margin*@
                            <th style="font-weight: bold; width: 100px;background-color:#a5a4f1" class="mi-margin-last-season">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'piConfirmedDelta5AmountLastYear')">
                                    &Delta;
                                    <span ng-show="sortValue.ExpectedByClient === '-piConfirmedDelta5AmountLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'piConfirmedDelta5AmountLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 50px;background-color:#a5a4f1" class="mi-margin-last-season">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'piConfirmedDelta5AmountLastYear')">
                                    % OF 100%
                                    <span ng-show="sortValue.ExpectedByClient === '-piConfirmedDelta5AmountLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'piConfirmedDelta5AmountLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th style="font-weight: bold; width: 50px;background-color:#a5a4f1" class="mi-margin-last-season">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'piConfirmedDelta5PercentLastYear')">
                                    % &Delta;
                                    <span ng-show="sortValue.ExpectedByClient === '-piConfirmedDelta5PercentLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'piConfirmedDelta5PercentLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>

                            @*Compare between 2 season*@
                            <th style="font-weight: bold; width: 60px;">
                                <a href="javascript:void(0)" ng-click="method.miSaleByClientRpt.sortData('ExpectedByClient', 'deltaPercentWithLastYear')">
                                    GROWTH
                                    <span ng-show="sortValue.ExpectedByClient === '-deltaPercentWithLastYear'" class="fa fa-caret-down"></span>
                                    <span ng-show="sortValue.ExpectedByClient === 'deltaPercentWithLastYear'" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                        </tr>
                        <tr>
                            <th></th>
                            <th>A</th>
                            <th>B</th>
                            <th>C</th>

                            <th class="mi-background-current-season">D</th>
                            <th class="mi-background-current-season">E</th>
                            <th class="mi-background-current-season">F</th>

                            <th class="mi-background-last-season">G</th>
                            <th class="mi-background-last-season">H</th>
                            <th class="mi-background-last-season">I</th>
                        
                            <th class="mi-margin-last-season">J</th>
                            <th class="mi-margin-last-season">K</th>
                            <th class="mi-margin-last-season">L</th>

                            <th>M=<br />(E-H)/H</th>
                        </tr>
                        <tr>
                            <td colspan="4" style="font-weight: bold;">TOTAL ({{expectedByClientResult.length}} clients)</td>


                            <td style="text-align:right; font-weight:bold;background-color:#92d678">{{expectedByClientResult | sumFunc:'expectedContThisYear' | number : 1}}</td>
                            <td style="text-align:right; font-weight:bold;background-color:#92d678">{{expectedByClientResult | sumFunc:'expectedAmountInUSDThisYear' | currency:'$':0}}</td>
                            <td style="font-weight: bold;text-align: right;background-color:#92d678">100%</td>

                            <td style="text-align:right; font-weight:bold;background-color:#a5a4f1">{{expectedByClientResult | sumFunc:'ciContLastYear' | number : 1}}</td>
                            <td style="text-align:right; font-weight:bold;background-color:#a5a4f1">{{expectedByClientResult | sumFunc:'ciAmountInUSDLastYear' | currency:'$':0}}</td>
                            <td style="font-weight: bold;text-align: right;background-color:#a5a4f1">100%</td>  

                            <td style="text-align:right; font-weight:bold;background-color:#a5a4f1" class="mi-margin-last-season">{{expectedByClientResult | sumFunc:'piConfirmedDelta5AmountLastYear' | currency:'$':0}}</td>
                            <td style="text-align:right; font-weight:bold;background-color:#a5a4f1" class="mi-margin-last-season">100%</td>
                            <td style="text-align:right; font-weight:bold;background-color:#a5a4f1" class="mi-margin-last-season">{{(expectedByClientResult | sumFunc:'piConfirmedDelta5AmountLastYear') * 100 / (expectedByClientResult | sumFunc:'piConfirmedPurchasingAmountLastYear') | number:1}}%</td>

                            <td style="text-align:right; font-weight:bold">
                                <span ng-class="{increase: (miSaleByClientRpt.expectations | sumFunc:'expectedAmountInUSDThisYear') > (miSaleByClientRpt.expectations | sumFunc:'purchasingAmountInEURLastYear'), decrease: (miSaleByClientRpt.expectations | sumFunc:'expectedAmountInUSDThisYear') < (miSaleByClientRpt.expectations | sumFunc:'purchasingAmountInEURLastYear')}">
                                    [{{((expectedByClientResult | sumFunc:'expectedAmountInUSDThisYear') / (expectedByClientResult | sumFunc:'ciAmountInUSDLastYear') - 1) * 100 | number : 0}}%]
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="text" ng-model="miSaleByClientRpt.filter.ExpectedByClient.clientNM" class="form-control" style="height:80%" /></td>
                            <td><input type="text" ng-model="miSaleByClientRpt.filter.ExpectedByClient.clientCountryUD" class="form-control" style="height:80%" /></td>
                            <td><input type="text" ng-model="miSaleByClientRpt.filter.ExpectedByClient.saleUD" class="form-control" style="height:80%" /></td>
                            <td colspan="11"></td>
                        </tr>
                        <tr ng-repeat="item in expectedByClientResult = (miSaleByClientRpt.expectations | orderBy : miSaleByClientRpt.sortValue.ExpectedByClient | filter : {clientNM : miSaleByClientRpt.filter.ExpectedByClient.clientNM, clientCountryUD : miSaleByClientRpt.filter.ExpectedByClient.clientCountryUD, saleUD : miSaleByClientRpt.filter.ExpectedByClient.saleUD})">
                            <td style="text-align: right">{{$index+1}}</td>
                            <td>{{item.clientNM}}</td>
                            <td style="text-align: center">{{item.clientCountryUD}}</td>
                            <td style="text-align: center">{{item.saleUD}}</td>


                            <td style="text-align: right;background-color:#92d678;">{{item.expectedContThisYear | number : 1}}</td>
                            <td style="text-align: right;background-color:#92d678;">{{item.expectedAmountInUSDThisYear | currency:'$':0}}</td>
                            <td style="text-align: right;background-color:#92d678;">{{item.expectedAmountInUSDThisYear * 100 / (miSaleByClientRpt.expectations | sumFunc:'expectedAmountInUSDThisYear') | number : 1}}%</td>


                            <td style="text-align: right;background-color:#a5a4f1">{{item.ciContLastYear | number : 1}}</td>
                            <td style="text-align: right;background-color:#a5a4f1">{{item.ciAmountInUSDLastYear | currency:'$':0}}</td>
                            <td style="text-align: right;background-color:#a5a4f1">{{item.ciAmountInUSDLastYear * 100 / (miSaleByClientRpt.expectations | sumFunc:'ciAmountInUSDLastYear') | number : 1}}%</td>

                            <td style="text-align: right;" class="mi-margin-last-season">{{item.piConfirmedDelta5AmountLastYear | currency:'$':0}}</td>
                            <td style="text-align: right;" class="mi-margin-last-season">{{item.piConfirmedDelta5AmountLastYear / (expectedByClientResult | sumFunc : 'piConfirmedDelta5AmountLastYear') * 100 | number:1}}%</td>
                            <td style="text-align: right;" class="mi-margin-last-season">{{item.piConfirmedDelta5PercentLastYear | number:1}}%</td>
                        
                            <td style="text-align: right;">
                                <span ng-class="{increase: item.expectedAmountInUSDThisYear > item.ciAmountInUSDLastYear, decrease: item.expectedAmountInUSDThisYear < item.ciAmountInUSDLastYear}">
                                    [{{(item.expectedAmountInUSDThisYear - item.ciAmountInUSDLastYear) / item.ciAmountInUSDLastYear | number : 0}}%]
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div ng-show="!miSaleByClientRpt.expectations">
        <i class="fa fa-spin fa-refresh"></i> LOADING ...
    </div>
</div>

<script type="text/javascript">
    var miSaleByClientContext = {
        serviceUrl: '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/misalebyclient/',
        token: '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]',
        param: {
            season: '@season',
        }
    }
</script>

