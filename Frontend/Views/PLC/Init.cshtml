@{
    ViewBag.Title = "Create new PLC";
    ViewBag.Module = "PLC";
}

<form class="row" name="editForm">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <h2>Select item to create PLC</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="smart-form">
                        <fieldset style="padding: 0px;">
                            <section class="col col-6" style="position: relative;padding: 0px;">
                                <label class="label">Factory</label>
                                <label class="select">
                                    <select class="form-control search-filter" ng-model="filters.factoryID" ng-options="factory.factoryID as factory.factoryUD for factory in factories">
                                        <option value=""></option>
                                    </select>
                                    <i></i>
                                </label>
                            </section>
                        </fieldset>
                    </div>
                    <div class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 1550px;">
                                <div style="width: 120px;"></div>
                                <div style="width: 200px;">Art.Code</div>
                                <div style="width: 250px;">Description</div>
                                <div style="width: 160px;">Booking No</div>
                                <div style="width: 160px;">B/L No</div>
                                <div style="width: 80px;">Season</div>
                                <div style="width: 80px;">Client</div>
                                <div style="width: 160px;">Container</div>
                                <div style="width: 160px;">Loading Plan No</div>
                                <div>P/I No</div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 1550px;">
                                <table>
                                    <tr ng-repeat="model in items | filter:filters">
                                        <td style="text-align: center; width: 120px;">
                                            <a class="btn btn-primary btn-xs font-11" href="javascript:void(0)" title="Create PLC" ng-click="event.goNext(model.bookingID, model.factoryID, model.offerLineID, model.offerLineSparepartID)"><i class="fa fa-pencil"></i> Create PLC</a>
                                        </td>
                                        <td style="width: 200px;">{{model.articleCode}}</td>
                                        <td style="width: 250px;">{{model.description}}</td>
                                        <td style="width: 160px;">{{model.bookingUD}}</td>
                                        <td style="width: 160px;">{{model.blNo}}</td>
                                        <td style="width: 80px;">{{model.season}}</td>
                                        <td style="width: 80px;">{{model.clientUD}}</td>
                                        <td style="width: 160px;">{{model.containerNo}}</td>
                                        <td style="width: 160px;">{{model.loadingPlanUD}}</td>
                                        <td>{{model.profomaInvoiceNo}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-body no-padding" style="min-height: 0px;">
                    <div class="smart-form">
                        <fieldset style="padding: 0px;">&nbsp;</fieldset>
                        <footer>
                            <button class="btn btn-default" type="button" ng-click="event.goBack($event)">
                                Cancel
                            </button>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </article>
</form>

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/plc/';
        jsonService.supportServiceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/support/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';

        var context = {
            backURL: '@Url.Action("Index", "PLC")',
            nextURL: '@Url.Action("Edit", "PLC")/0?'
        }
    </script>
    <script src="~/Angular/app/plc/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/plc/init.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}

