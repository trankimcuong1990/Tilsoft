@{
    ViewBag.Title = "Search PLC";
    ViewBag.Module = "PLC";
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-search-filter" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Filters</h2>
            </header>
            
            <div>
                <div class="widget-body">
                    <div class="smart-form">
                        <fieldset>
                            <div class="row">
                                <section class="col col-3">
                                    <label class="label">Art.Code</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ArticleCode" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Description</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.Description" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Factory</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.FactoryUD" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Booking</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.BookingUD" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">B/L No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.BLNo" />
                                    </label>
                                </section>                               
                                <section class="col col-3">
                                    <label class="label">Client</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ClientUD" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Container No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ContainerNo" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Loading Plan</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.LoadingPlanUD" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">PI No</label>
                                    <label class="input">
                                        <input class="search-filter" type="text" ng-model="filters.ProformaInvoiceNo" />
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Season</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.Season" ng-options="season.seasonValue as season.seasonText for season in seasons">
                                            <option value=""></option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                                <section class="col col-3">
                                    <label class="label">Status Confirm</label>
                                    <label class="select">
                                        <select class="form-control search-filter" ng-model="filters.IsConfirmed">
                                            <option value=""></option>
                                            <option value="0">UnConfirmed</option>
                                            <option value="1">Confirmed</option>
                                        </select>
                                        <i></i>
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Search Result</h2>
            </header>

            <div>
                <div class="widget-body">
                    <div id="searchResult" class="tilsoft-table-wrapper">
                        <div class="tilsoft-table">
                            <div class="tilsoft-table-header" style="width: 2140px;">
                                <div style="width: 120px;"></div>
                                <div style="width: 60px;">&nbsp;</div>
                                <div style="width: 100px;">Confirmed</div>
                                <div style="width: 210px;" class="sorting">Art.Code</div>
                                <div style="width: 250px;" class="sorting">Description</div>
                                <div style="width: 100px;" class="sorting">Factory</div>
                                <div style="width: 100px;" class="sorting">Booking</div>
                                <div style="width: 100px;" class="sorting">B/L No</div>
                                <div style="width: 80px;" class="sorting">Season</div>
                                <div style="width: 80px;" class="sorting">Client</div>
                                <div style="width: 150px;" class="sorting">Container</div>
                                <div style="width: 150px;" class="sorting">Loading Plan</div>
                                <div style="width: 60px;" class="sorting">Rating</div>
                                <div style="width: 110px;" class="sorting">Rated By</div>
                                <div style="width: 80px;" class="sorting">Rated Date</div>
                                <div style="width: 110px;" class="sorting_desc">Updated By</div>
                                <div style="width: 80px;" class="sorting">Updated Date</div>
                                <div style="width: 110px;" class="sorting">Confirmed By</div>
                                <div class="sorting">Confirmed Date</div>
                            </div>
                            <div class="tilsoft-table-body" style="width: 2140px;">
                                <table>
                                    <tr ng-repeat="model in data">
                                        <td style="text-align: center; width: 120px;">
                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Update, HttpContext.Current) == "disabled")
                                            {
                                                <a target="_blank" class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "PLC")/{{model.plcid}}" title="View (Read Only)"><i class="fa fa-folder-open"></i> View</a>
                                            }
                                            else
                                            {
                                                <a target="_blank" class="btn btn-primary btn-xs font-11" href="@Url.Action("Edit", "PLC")/{{model.plcid}}" title="Edit"><i class="fa fa-pencil"></i> Edit</a>
                                            }

                                            @if (Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Delete, HttpContext.Current) != "disabled")
                                            {
                                                <a class="btn btn-danger btn-xs font-11" href="javascript:void(0)" ng-click="event.delete(model.plcid)" title="Delete" ng-disabled="model.isConfirmed"><i class="fa fa-times"></i> Delete</a>
                                            }
                                        </td>
                                        <td style=" width: 60px; text-align: center;"><input type="checkbox" ng-model="model.isSelected" /></td>
                                        <td style=" width: 100px; text-align: center;"><input type="checkbox" disabled ng-model="model.isConfirmed" /></td>
                                        <td style=" width: 210px; text-align: center;">{{model.articleCode}}</td>
                                        <td style=" width: 250px;">{{model.description}}</td>
                                        <td style=" width: 100px;">{{model.factoryUD}}</td>
                                        <td style=" width: 100px;">{{model.bookingUD}}</td>
                                        <td style=" width: 100px;">{{model.blNo}}</td>
                                        <td style=" width: 80px;">{{model.season}}</td>
                                        <td style=" width: 80px;">{{model.cachedClientUD}}</td>
                                        <td style=" width: 150px;">{{model.cachedContanierNo}}</td>
                                        <td style=" width: 150px;">{{model.cachedLoadingPlanUD}}</td>
                                        <td style=" width: 60px; text-align: center;">{{model.rating}}</td>
                                        <td style="width: 110px;">  
                                            <avs-show-dialog-link is-show="model.showRatorLink"
                                                                  navigate-url="'@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/' + model.ratorID"
                                                                  display-text="model.ratorName"></avs-show-dialog-link>
                                        </td>
                                        <td style=" width: 80px;">{{model.ratedDate}}</td>
                                        <td style=" width: 110px;">
                                            <avs-show-dialog-link is-show="model.showUpdatorLink"
                                                                  navigate-url="'@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/' + model.updatorID"
                                                                  display-text="model.updatorName"></avs-show-dialog-link>
                                        </td>
                                        <td style=" width: 80px;">{{model.updatedDate}}</td>
                                        <td style="width: 110px;">
                                            <avs-show-dialog-link is-show="model.showConfirmerLink"
                                                                  navigate-url="'@Url.Action("Detail", "EmployeeMng", new { id = UrlParameter.Optional })/' + model.confirmerID"
                                                                  display-text="model.confirmerName"></avs-show-dialog-link>
                                        </td>
                                        <td style="text-align: center;">{{model.confirmedDate}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>

@section FormAction {
    <ul id="sparks">
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Search" ng-click="event.reload()"><i class="fa fa-search"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default" title="Refresh" ng-click="event.reload()"><i class="fa fa-refresh"></i></a>
        </li>
        <li class="sparks-info">
            <a href="@Url.Action("Init", "PLC")" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Create, HttpContext.Current))" title="New"><i class="fa fa-file-o"></i></a>
        </li>
        <li class="sparks-info">
            <a href="javascript:void(0);" class="btn btn-default @(Frontend.Helper.AuthHelper.GetActionButtonStatus(ViewBag.ModuleCode, Frontend.Helper.ActionEnum.Print, HttpContext.Current))" title="Print" ng-click="event.print()"><i class="fa fa-print"></i></a>
        </li>
    </ul>
}

@section pagejs {
    <script src="~/Angular/app/jsonService.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script type="text/javascript">
        jsonService.serviceUrl = '@(System.Configuration.ConfigurationManager.AppSettings["BackendServiceUrl"])api/plc/';
        jsonService.token = '@Session[Frontend.Customize.Common.ProjectDefinition.TOKEN_SESSION]';
        jsonService.searchFilter.pageSize = @System.Configuration.ConfigurationManager.AppSettings["DefaultPageSize"];
        var context = {
            backendReportUrl: '@System.Configuration.ConfigurationManager.AppSettings["BackendReportUrl"]'
        }
    </script>
    <script src="~/Angular/app/plc/service.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
    <script src="~/Angular/app/plc/index.js?c=@System.Guid.NewGuid().ToString().Replace("-", "")"></script>
}
