<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget" id="wid-id-general" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
        <header>
            <span class="widget-icon">
                <i class="fa fa-database"></i>
            </span>
            <h2>Search Purchase Invoice</h2>
        </header>
        <div>
            <div class="widget-body">
                <div class="smart-form">
                    <div class="row">
                        <section class="col col-lg-12">
                            <a class="btn btn-primary btn-xs m-bottom-15" href="#/" ng-click="eventPurchaseInvoiceCtrl.selectPurchaseInvoiceItem()">Select</a>
                            <a class="btn btn-warning btn-xs m-bottom-15" href="#/">Back</a>

                            <div class="tilsoft-table-wrapper" avs-scroll grid-handler="gridHandler">
                                <div class="tilsoft-table">
                                    <div class="tilsoft-table-header" style="width: 1300px;">
                                        <div style="width: 70px;"></div>
                                        <div style="width: 150px;">System Invoice No</div>
                                        <div style="width: 150px;">Invoice No</div>
                                        <div style="width: 150px;">Invoice Date</div>
                                        <div style="width: 150px;">Invoice Amount</div>
                                        <div style="width: 150px;">Total Deposit</div>
                                        <div style="width: 150px;">Total Payment</div>
                                        <div style="width: 150px;">Remain</div>
                                        <div>Remark</div>
                                    </div>

                                    <div class="tilsoft-table-filter" style="width: 1300px;">
                                        <div style="text-align: center; width: 70px; vertical-align:middle">
                                            <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Apply Filter" ng-click="eventPurchaseInvoiceCtrl.init()"><i class="fa fa-filter"></i></a>
                                            <a href="javascript:void(0)" class="btn btn-default btn-xs" title="Clear Filter" ng-click="eventPurchaseInvoiceCtrl.clearFilter()"><i class="fa fa-ban"></i></a>
                                        </div>
                                        <div style="width: 150px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.purchaseInvoiceUD" class="search-filter" /></div>
                                        <div style="width: 150px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.invoiceNo" class="search-filter" /></div>
                                        <div style="width: 150px; text-align: center; vertical-align: middle"><input type="text" ng-model="filters.purchaseInvoiceDate" class="search-filter" /></div>
                                        <div style="width: 150px; text-align: center; vertical-align: middle"></div>
                                        <div style="width: 150px; text-align: center; vertical-align: middle"></div>
                                        <div style="width: 150px"></div>
                                        <div style="width: 150px"></div>
                                        <div></div>
                                    </div>

                                    <div class="tilsoft-table-body" style="width: 1300px; margin-top: 95px;">
                                        <table>
                                            <tbody ng-repeat="item in dataPurchaseInvoice">
                                                <tr>
                                                    <td style="width:69px;text-align:center;vertical-align:top">
                                                        <label class="checkbox">
                                                            <input type="checkbox" ng-model="item.isSelected">
                                                            <i style="top:0px; left:20px"></i>
                                                        </label>
                                                    </td>
                                                    <td style="text-align: center; width: 150px; vertical-align:middle">{{item.purchaseInvoiceUD}}</td>
                                                    <td style="text-align: center; width: 150px; vertical-align:middle">{{item.invoiceNo}}</td>
                                                    <td style="text-align: center; width: 150px; vertical-align:middle">{{item.purchaseInvoiceDate}}</td>
                                                    <td style="text-align: right; width: 150px; vertical-align:middle">{{item.currency === 'USD' ? '$' : ''}} {{item.currency === 'VND' ? 'VND' : ''}} {{item.totalPurchaseInvoice | number:2}}</td>
                                                    <td style="text-align: right; width: 150px; vertical-align:middle">{{item.currency === 'USD' ? '$' : ''}} {{item.currency === 'VND' ? 'VND' : ''}} {{item.totalRealDeposit | number:2}}</td>
                                                    <td style="text-align: right; width: 150px; vertical-align:middle">{{item.currency === 'USD' ? '$' : ''}} {{item.currency === 'VND' ? 'VND' : ''}} {{item.totalPayment | number:2}}</td>
                                                    <td style="text-align: right; width: 150px; vertical-align:middle">{{item.currency === 'USD' ? '$' : ''}} {{item.currency === 'VND' ? 'VND' : ''}} {{item.remain | number:2}}</td>
                                                    <td><textarea style="background:none" ng-model="item.remark" rows="4" disabled></textarea></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

